@{
    ViewBag.Title = "Goa | Sun, Sand & Sea";
}

<link rel="stylesheet" href="~/css/travel-style.css" />
<style>
    :root {
        --accent-color: #f39c12; /* Sunset Orange */
        --bg-gradient: linear-gradient(135deg, #2c3e50 0%, #fd746c 100%);
    }

    /* Centering the titles and making them attractive */
    .hero-text, .gallery-title {
        text-align: center;
        margin-top: 50px;
        margin-bottom: 30px;
    }

        .hero-text h1 {
            font-size: 3.5rem;
            margin-bottom: 0;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .hero-text span {
            color: var(--accent-color);
            text-shadow: 2px 2px 10px rgba(0,0,0,0.3);
        }

    .gallery-title {
        font-size: 2.5rem;
        font-weight: 700;
        position: relative;
        display: inline-block;
        width: 100%;
    }
</style>

<div class="main-page">
    <div class="hero-text">
        <h1>Experience <span>Goa</span></h1>
        <p>From silent retreats to neon nights.</p>
    </div>

    <div class="packages-section">
        <div class="pkg-card" onclick="selectPkg('North Goa Party')">
            <div class="pkg-img" style="background-image: url('https://images.unsplash.com/photo-1512789172734-8b688198b04a?w=400');"></div>
            <div class="pkg-body">
                <h3>Party Starter</h3>
                <p>3 Days • Baga & Anjuna</p>
                <div class="pkg-price">₹7,499</div>
                <button class="select-btn">Book Trip</button>
            </div>
        </div>

        <div class="pkg-card highlight" onclick="selectPkg('Total Goa Experience')">
            <div class="pkg-img" style="background-image: url('https://images.unsplash.com/photo-1614082242765-7c98ca0f3df3?w=400');"></div>
            <div class="pkg-body">
                <span class="hot-tag">Best Seller</span>
                <h3>Goa Classic</h3>
                <p>5 Days • North & South</p>
                <div class="pkg-price">₹13,999</div>
                <button class="select-btn">Book Trip</button>
            </div>
        </div>

        <div class="pkg-card" onclick="selectPkg('South Goa Serenity')">
            <div class="pkg-img" style="background-image: url('https://images.unsplash.com/photo-1587922546307-776227941871?w=400');"></div>
            <div class="pkg-body">
                <h3>South Retreat</h3>
                <p>4 Days • Palolem Peace</p>
                <div class="pkg-price">₹11,499</div>
                <button class="select-btn">Book Trip</button>
            </div>
        </div>
    </div>

    <h2 class="gallery-title">Hidden <span>Gems</span> of Goa</h2>

    <div class="auto-scroll-container">
        <div class="scroll-track">
            <div class="gem-item"><img src="https://images.unsplash.com/photo-1512789172734-8b688198b04a?w=300"><span>Cola Beach Lagoon</span></div>
            <div class="gem-item"><img src="https://images.unsplash.com/photo-1614082242765-7c98ca0f3df3?w=300"><span>Fontainhas Latin Quarter</span></div>
            <div class="gem-item"><img src="https://images.unsplash.com/photo-1590393957454-0414006c7490?w=300"><span>Chorao Island</span></div>
            <div class="gem-item"><img src="https://images.unsplash.com/photo-1587922546307-776227941871?w=300"><span>Cabo de Rama Fort</span></div>
            <div class="gem-item"><img src="https://images.unsplash.com/photo-1590393957454-0414006c7490?w=300"><span>Butterfly Beach</span></div>
            <div class="gem-item"><img src="https://images.unsplash.com/photo-1512789172734-8b688198b04a?w=300"><span>Cola Beach Lagoon</span></div>
            <div class="gem-item"><img src="https://images.unsplash.com/photo-1614082242765-7c98ca0f3df3?w=300"><span>Fontainhas Latin Quarter</span></div>
            <div class="gem-item"><img src="https://images.unsplash.com/photo-1590393957454-0414006c7490?w=300"><span>Chorao Island</span></div>
        </div>
    </div>
</div>

<script>
    function selectPkg(name) { alert("Adding " + name + " to your itinerary!"); }

   
     function selectPkg(name) {
         // Logic to redirect based on the package selected
         switch (name) {
             case 'North Goa Party':
                 window.location.href = '/Home/GoaPack1'; // Goes to goa-pack1.cshtml
                 break;

             case 'Total Goa Experience':
                 window.location.href = '/Home/GoaPack2'; // Goes to goa-pack2.cshtml
                 break;

             case 'South Goa Serenity':
                 window.location.href = '/Home/GoaPack3'; // Goes to goa-pack3.cshtml
                 break;

             default:
                 console.log("Package details not found.");
                 break;
         }
     }


</script>