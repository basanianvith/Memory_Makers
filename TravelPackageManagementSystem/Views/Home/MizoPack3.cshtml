@{
    ViewBag.Title = "MizoPack3 - Blue Mountains";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>MizoPack3 - Blue Mountains</title>
    <link rel="stylesheet" href="/css/PackTD.css" />
</head>
<body>

    <!-- HERO IMAGE -->
    <section class="hero">
        <img class="hero-img" src="/lib/Image/m31.jpg" alt="Phawngpui Peak" />
        <div class="hero-content">
            <h1>Mizoram: Blue Mountains</h1>
            <p>5 Days • Phawngpui Peak • Trekking Adventure</p>
        </div>
    </section>

    <!-- PACKAGE + BOOKING -->
    <div class="container">
        <div class="flex">

            <!-- LEFT / DETAILS -->
            <div class="left-col">

                <div class="package-header">
                    <div class="package-title">
                        <h2>Discover Mizoram: Phawngpui Blue Mountain</h2>
                        <div class="rating">★ 4.8 (601 reviews)</div>
                    </div>
                    <div style="text-align:right;">
                        <div style="font-size:14px;color:#666;">Duration</div>
                        <div style="font-weight:700;font-size:16px;">5 Days / 4 Nights</div>
                    </div>
                </div>

                <!-- IMAGE GALLERY -->
                <div class="gallery" aria-label="Image gallery">
                    <div id="mainImage" class="main-image" style="background-image:url('/lib/Image/phawngpui1.jpg');"></div>
                    <div class="thumbs">
                        <button class="thumb active" data-src="/lib/Image/m32.jpg" style="background-image:url('/lib/Image/m32.jpg');" aria-label="Phawngpui Peak"></button>
                        <button class="thumb" data-src="/lib/Image/m33.jpg" style="background-image:url('/lib/Image/m33.jpg');" aria-label="Trekking Trail"></button>
                        <button class="thumb" data-src="/lib/Image/m34.jpg" style="background-image:url('/lib/Image/m34.jpg');" aria-label="Camping"></button>
                        <button class="thumb" data-src="/lib/Image/m35.jpg" style="background-image:url('/lib/Image/m35.jpg');" aria-label="Mountain View"></button>
                    </div>
                </div>

                <!-- LIGHTBOX -->
                <div id="lightbox" class="lightbox">
                    <img id="lightboxImg" src="" alt="Large view" />
                </div>

                <!-- OVERVIEW -->
                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>
                        Adventure into Mizoram’s highest peak, Phawngpui (Blue Mountain). Experience breathtaking views, rare orchids, and vibrant birdlife while trekking through pristine forests and camping under the stars.
                    </p>
                </div>

                <!-- ITINERARY -->
                <div class="itinerary">
                    <h3>Day-by-Day Itinerary</h3>
                    <div class="day"><h4>Day 1 — Arrival</h4><p>Drive to Sangau base camp, orientation and overnight stay.</p></div>
                    <div class="day"><h4>Day 2 — Trek Start</h4><p>Begin trek through lush forests, overnight camping en route.</p></div>
                    <div class="day"><h4>Day 3 — Summit</h4><p>Reach Phawngpui Peak, enjoy panoramic views of the Blue Mountains.</p></div>
                    <div class="day"><h4>Day 4 — Descent</h4><p>Trek back down, explore flora and fauna, camp overnight.</p></div>
                    <div class="day"><h4>Day 5 — Departure</h4><p>Return to Aizawl for onward journey.</p></div>
                </div>

                <!-- PRICING -->
                <div class="price-card">
                    <div class="price-row"><div>Base Price (per person)</div><div class="price-total">₹14,999</div></div>
                    <div class="price-row"><div>Taxes & Fees</div><div>₹1,500</div></div>
                    <div class="price-row"><div>Selected Guests</div><div id="priceSummary">1 person</div></div>
                    <hr style="margin:10px 0;border:none;border-top:1px solid #e6e9ef;" />
                    <div style="font-weight:700;display:flex;justify-content:space-between;">
                        <div>Total Payable</div><div class="price-total" id="totalPayable">₹16,499</div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4>What's Included</h4>
                        <div class="list-inline">
                            <div class="included">Camping gear & tents</div>
                            <div class="included">Guided trek</div>
                            <div class="included">Daily meals during trek</div>
                            <div class="included">Transfers from Aizawl</div>
                        </div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4>What's Excluded</h4>
                        <div class="list-inline">
                            <div class="excluded">Airfare / Train fare</div>
                            <div class="excluded">Entry permits</div>
                            <div class="excluded">Personal trekking equipment</div>
                            <div class="excluded">Personal expenses</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- RIGHT / BOOKING -->
            <div class="right-col">
                <aside class="booking-box">
                    <h3>Book This Package</h3>
                    <form method="post" action="/Booking/Start">
                        <label>Travel Date</label><input type="date" required />
                        <label>Guests</label>
                        <select><option>1</option><option>2</option><option>3</option><option>4</option></select>
                        <label>Email</label><input type="email" required />
                        <label>Phone</label><input type="tel" />
                        <button type="submit" class="btn btn-primary">Book Now</button>
                    </form>
                </aside>
            </div>
        </div>
    </div>

    <script src="/js/MizoPack3.js"></script>
</body>
</html>
