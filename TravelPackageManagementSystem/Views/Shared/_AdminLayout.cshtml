<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | easy Safar</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/css/admin.css" rel="stylesheet" />
</head>

<body>

    <div class="admin-wrapper">

        <!-- SIDEBAR -->
        <aside class="admin-sidebar" id="sidebar">

            <!-- BRAND -->
            <div class="sidebar-header">
                <div class="logo-circle">
                    <i class="fa-solid fa-compass"></i>
                </div>
                <div class="brand-text">
                    <h4>easy<span>Safar</span></h4>
                    <small>Welcome back, Admin ✨</small>
                </div>
            </div>

            <!-- MENU -->
            <ul class="sidebar-menu">

                <li class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Dashboard">
                        <i class="fa-solid fa-house"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <li class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Approvals" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Approvals">
                        <i class="fa-solid fa-circle-check"></i>
                        <span>Approvals</span>
                    </a>
                </li>

                <li class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Packages" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Packages">
                        <i class="fa-solid fa-box-archive"></i>
                        <span>Packages</span>
                    </a>
                </li>

                <li class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Bookings" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Bookings">
                        <i class="fa-solid fa-calendar-days"></i>
                        <span>Bookings</span>
                    </a>
                </li>

                <li class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Users" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Users">
                        <i class="fa-solid fa-users"></i>
                        <span>Users</span>
                    </a>
                </li>

            </ul>

            <!-- ACCOUNT -->
            <div class="sidebar-account">
                <div class="account-info">
                    <div class="avatar">A</div>
                    <div class="account-text">
                        <div class="name">Administrator</div>
                        <div class="status">Online</div>
                    </div>
                </div>

                <button class="logout-btn" onclick="openLogoutModal()">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    <span>Logout</span>
                </button>
            </div>

        </aside>

        <!-- MAIN -->
        <main class="admin-main" id="main">

            <header class="admin-topbar">
                <div class="topbar-left">
                    <div class="hamburger" onclick="toggleSidebar()">
                        <span></span><span></span><span></span>
                    </div>
                    <h5>@ViewData["Title"]</h5>
                </div>

                <div class="topbar-right">
                    <span class="hello-admin">Hello, Admin 👋</span>
                    <a asp-controller="Home" asp-action="Index" class="visit-site">View Website</a>
                </div>
            </header>

            <div class="content-body">
                @RenderBody()
            </div>

        </main>
    </div>

    <!-- LOGOUT MODAL -->
    <div class="custom-modal" id="logoutModal">
        <div class="modal-box">
            <h4>Confirm Logout</h4>
            <p>Are you sure you want to logout?</p>

            <div class="modal-actions">
                <button class="btn-cancel" onclick="closeLogoutModal()">Cancel</button>
                <button class="btn-confirm" onclick="confirmLogout()">Yes, Logout</button>
            </div>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            sidebar.classList.toggle("collapsed");
            main.classList.toggle("collapsed");
        }

        function openLogoutModal() {
            logoutModal.classList.add("show");
        }

        function closeLogoutModal() {
            logoutModal.classList.remove("show");
        }

        function confirmLogout() {
            alert("Session logged out successfully");
            window.location.href = '/Home/Index';
        }
    </script>

</body>
</html>