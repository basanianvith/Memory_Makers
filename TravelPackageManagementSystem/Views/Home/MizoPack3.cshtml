@{
    ViewBag.Title = "MizoPack3 - Nature Trails & Wildlife";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>MizoPack3 - Nature Trails & Wildlife</title>
    <link rel="stylesheet" href="/css/PackTD.css" />
</head>
<body>

    <section class="hero">
        <img class="hero-img" src="/lib/Image/nature_hero.jpg" alt="Mizoram Hills" />
        <div class="hero-content">
            <h1>Mizoram: Nature Trails & Wildlife</h1>
            <p>5 Days • Phawngpui Trek • Wildlife Sanctuary</p>
        </div>
    </section>

    <div class="container">
        <div class="flex">

            <div class="left-col">
                <div class="package-header">
                    <div class="package-title">
                        <h2>Discover Mizoram: Nature & Adventure</h2>
                        <div class="rating">★ 4.9 (215 reviews)</div>
                    </div>
                    <div style="text-align:right;">
                        <div style="font-size:14px;color:#666;">Duration</div>
                        <div style="font-weight:700;font-size:16px;">5 Days / 4 Nights</div>
                    </div>
                </div>

                <div class="gallery">
                    <div id="mainImage" class="main-image" style="background-image:url('/lib/Image/m2.jpg');"></div>
                    <div class="thumbs">
                        <button class="thumb active" data-src="/lib/Image/m32.jpg" style="background-image:url('/lib/Image/m32.jpg');"></button>
                        <button class="thumb" data-src="/lib/Image/m33.jpg" style="background-image:url('/lib/Image/m33.jpg');"></button>
                        <button class="thumb" data-src="/lib/Image/m34.jpg" style="background-image:url('/lib/Image/m34.jpg');"></button>
                        <button class="thumb" data-src="/lib/Image/m35.jpg" style="background-image:url('/lib/Image/m35.jpg');"></button>
                    </div>
                </div>

                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>
                        Escape into the pristine wilderness of Mizoram. This package takes you through the Blue Mountain (Phawngpui),
                        dense wildlife sanctuaries, and hidden waterfalls, perfect for nature lovers and trekkers.
                    </p>
                </div>

                <div class="itinerary">
                    <h3>Day-by-Day Itinerary</h3>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 1 — Arrival & Base Camp</h4>
                            <span class="toggle">+</span>
                        </div>
                        <div class="day-body">
                            <p>Arrival at Aizawl. Scenic drive to the southern base camp. Orientation and overnight stay in eco-lodges.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 2 — Phawngpui Trek</h4>
                            <span class="toggle">+</span>
                        </div>
                        <div class="day-body">
                            <p>Guided trek to the peak of Phawngpui (Blue Mountain). Enjoy views of the Chhimtuipui River and Myanmar border.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 3 — Wildlife Spotting</h4>
                            <span class="toggle">+</span>
                        </div>
                        <div class="day-body">
                            <p>Visit the Murlen National Park. Early morning bird watching and spotting rare flora and fauna.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 4 — Vantawng Falls</h4>
                            <span class="toggle">+</span>
                        </div>
                        <div class="day-body">
                            <p>Excursion to Mizoram's highest waterfall, Vantawng Falls. Afternoon relaxation by the river.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 5 — Departure</h4>
                            <span class="toggle">+</span>
                        </div>
                        <div class="day-body">
                            <p>Transfer back to Aizawl for local handicraft shopping before heading to Lengpui Airport.</p>
                        </div>
                    </div>
                </div>

                <div class="price-card">
                    <div class="price-row">
                        <div>Base Price (per person)</div>
                        <div class="price-total">₹13,999</div>
                    </div>
                    <div class="price-row">
                        <div>Taxes & Fees</div>
                        <div>₹1,400</div>
                    </div>
                    <div class="price-row">
                        <div>Selected Guests</div>
                        <div id="priceSummary">1 person</div>
                    </div>
                    <hr style="margin:10px 0; border:none; border-top:1px solid #eee;" />
                    <div style="font-weight:700; display:flex; justify-content:space-between;">
                        <div>Total Payable</div>
                        <div class="price-total" id="totalPayable">₹15,399</div>
                    </div>
                </div>
            </div>

            <div class="right-col">
                <aside class="booking-box">
                    <h3>Book This Package</h3>
                    <form id="bookingForm" method="post" action="/Home/PaymentPage">
                        <label>Travel Date</label>
                        <input type="date" required />

                        <label>Guests</label>
                        <select id="guests">
                            <option value="1">1 person</option>
                            <option value="2">2 persons</option>
                            <option value="3">3 persons</option>
                            <option value="4">4 persons</option>
                        </select>

                        <label>Contact Email</label>
                        <input type="email" placeholder="you@example.com" required />

                        <label>Phone</label>
                        <input type="tel" placeholder="+91 00000 00000" />

                        <button type="submit" class="btn btn-primary" style="width:100%; margin-top:10px;">Book Now</button>
                    </form>
                </aside>
            </div>
        </div>
    </div>

    <div id="lightbox" class="lightbox" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.9); z-index:1000; justify-content:center; align-items:center;">
        <img id="lightboxImg" src="" style="max-width:90%; max-height:80%;" />
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // 1. GALLERY & LIGHTBOX
            const main = document.getElementById('mainImage');
            const thumbs = document.querySelectorAll('.thumb');
            const lightbox = document.getElementById('lightbox');
            const lightboxImg = document.getElementById('lightboxImg');

            thumbs.forEach(t => {
                t.addEventListener('click', () => {
                    thumbs.forEach(x => x.classList.remove('active'));
                    t.classList.add('active');
                    const src = t.getAttribute('data-src');
                    main.style.backgroundImage = `url('${src}')`;
                });
            });

            main.addEventListener('click', () => {
                const currentBg = main.style.backgroundImage.slice(5, -2).replace(/"/g, "");
                lightboxImg.src = currentBg;
                lightbox.style.display = 'flex';
            });

            lightbox.addEventListener('click', () => {
                lightbox.style.display = 'none';
            });

            // 2. ITINERARY DROPDOWN
            const headers = document.querySelectorAll('.day-header');
            headers.forEach(h => {
                h.addEventListener('click', () => {
                    const body = h.nextElementSibling;
                    const toggle = h.querySelector('.toggle');

                    if (body.style.display === "block") {
                        body.style.display = "none";
                        toggle.textContent = "+";
                    } else {
                        body.style.display = "block";
                        toggle.textContent = "-";
                    }
                });
            });

            // 3. PRICE UPDATE (Base 13,999 + Tax 1,400)
            const guestSelect = document.getElementById('guests');
            const totalDisplay = document.getElementById('totalPayable');
            const summaryDisplay = document.getElementById('priceSummary');
            const basePrice = 13999;
            const taxes = 1400;

            guestSelect.addEventListener('change', function() {
                const count = parseInt(this.value);
                const total = (basePrice + taxes) * count;
                summaryDisplay.textContent = count + (count > 1 ? " persons" : " person");
                totalDisplay.textContent = "₹" + total.toLocaleString('en-IN');
            });
        });
    </script>
</body>
</html>