@{
    ViewBag.Title = "Taj Mahal Travel Package";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Taj Mahal Package</title>

    <link rel="stylesheet" href="/css/TajMahal.css" />
</head>

<body>

    <!-- HERO IMAGE -->
    <section class="hero">
        <img class="hero-img" src="/lib/Image/taj.jpg" alt="Taj Mahal" />
        <div class="hero-content">
            <h1>Taj Mahal & Agra Heritage Escape</h1>
            <p>3 Days • Sunrise at Taj • Agra Fort • Fatehpur Sikri</p>
        </div>
    </section>

    <!-- PACKAGE + BOOKING -->
    <div class="container">
        <div class="flex">

            <!-- LEFT / DETAILS -->
            <div class="left-col">

                <div class="package-header">
                    <div class="package-title">
                        <h2>Classic Agra: Taj Mahal, Agra Fort & Fatehpur Sikri</h2>
                        <div class="rating">★ 4.8 (4,520 reviews)</div>
                    </div>

                    <div style="text-align: right;">
                        <div style="font-size: 14px; color:#666;">Duration</div>
                        <div style="font-weight:700; font-size:16px;">3 Days / 2 Nights</div>
                    </div>
                </div>

                <!-- IMAGE GALLERY -->
                <div class="gallery" aria-label="Image gallery">
                    <div id="mainImage" class="main-image" role="img" aria-label="Main image" style="background-image: url('/lib/Image/taj1.jpg');"></div>

                    <div class="thumbs" role="list">
                        <button class="thumb active" role="listitem" type="button" data-src="/lib/Image/taj1.jpg" style="background-image: url('/lib/Image/taj1.jpg');" aria-label="Taj Sunrise"></button>
                        <button class="thumb" role="listitem" type="button" data-src="/lib/Image/taj2.jpg" style="background-image: url('/lib/Image/taj2.jpg');" aria-label="Agra Fort"></button>
                        <button class="thumb" role="listitem" type="button" data-src="/lib/Image/taj3.jpg" style="background-image: url('/lib/Image/taj3.jpg');" aria-label="Itmad-ud-Daulah"></button>
                        <button class="thumb" role="listitem" type="button" data-src="/lib/Image/taj4.jpg" style="background-image: url('/lib/Image/taj4.jpg');" aria-label="Fatehpur Sikri"></button>
                    </div>
                </div>

                <!-- LIGHTBOX -->
                <div id="lightbox" class="lightbox" role="dialog" aria-modal="true" aria-hidden="true">
                    <img id="lightboxImg" src="" alt="Large view" />
                </div>

                <!-- PACKAGE DESCRIPTION -->
                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>
                        A short cultural escape to Agra. Witness the Taj Mahal at sunrise, explore the imposing Agra Fort,
                        visit Itmad-ud-Daulah and the historic city of Fatehpur Sikri. Comfortable city hotels,
                        guided heritage tours and private transfers are included.
                    </p>
                </div>

                <!-- ITINERARY -->
                <div class="itinerary" aria-label="Day by day itinerary">
                    <h3 style="margin-bottom:10px;">Day-by-Day Itinerary</h3>

                    <div class="day">
                        <div class="day-header" data-day="1" role="button" tabindex="0">
                            <h4>Day 1 — Arrival in Agra</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Arrival and check-in. Evening at leisure; optional visit to local markets or Taj viewpoint.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="2" role="button" tabindex="0">
                            <h4>Day 2 — Taj Mahal Sunrise & Agra Fort</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Early morning visit to the Taj Mahal for sunrise. Later visit Agra Fort and Itmad-ud-Daulah.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="3" role="button" tabindex="0">
                            <h4>Day 3 — Fatehpur Sikri & Departure</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Excursion to Fatehpur Sikri before transfer to station/airport for onward journey.</p>
                        </div>
                    </div>
                </div>

                <!-- PRICING & INCLUSIONS -->
                <div class="price-card" aria-label="Pricing and inclusions">
                    <div class="price-row">
                        <div>Base Price (per person)</div>
                        <div class="price-total" id="pricePerPerson">₹9,500</div>
                    </div>

                    <div class="price-row">
                        <div>Taxes & Fees</div>
                        <div>₹950</div>
                    </div>

                    <div class="price-row">
                        <div>Selected Guests</div>
                        <div id="priceSummary">1 person</div>
                    </div>

                    <hr style="margin:10px 0; border:none; border-top:1px solid #e6e9ef;" />

                    <div style="font-weight:700; display:flex; justify-content:space-between; align-items:center;">
                        <div>Total Payable</div>
                        <div class="price-total" id="totalPayable">₹10,450</div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Included</h4>
                        <div class="list-inline">
                            <div class="included">City hotel stays (2 nights)</div>
                            <div class="included">Daily breakfast</div>
                            <div class="included">Private transfers & guided sightseeing</div>
                            <div class="included">Standard Taj Mahal entrance</div>
                        </div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Excluded</h4>
                        <div class="list-inline">
                            <div class="excluded">Airfare / Train fare</div>
                            <div class="excluded">Optional premium Taj tickets or private guides</div>
                            <div class="excluded">Meals not specified</div>
                            <div class="excluded">Personal expenses</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- RIGHT / BOOKING -->
            <div class="right-col">
                <aside class="booking-box" aria-labelledby="bookingHeading">
                    <h3 id="bookingHeading">Book This Package</h3>

                    <form id="bookingForm" method="post" action="/Booking/Start">
                        <label for="travelDate">Travel Date</label>
                        <input id="travelDate" name="TravelDate" type="date" required />

                        <label for="guests">Guests</label>
                        <select id="guests" name="Guests" required>
                            <option value="1" selected>1 person</option>
                            <option value="2">2 persons</option>
                            <option value="3">3 persons</option>
                            <option value="4">4 persons</option>
                        </select>

                        <label for="contactEmail">Contact Email</label>
                        <input id="contactEmail" name="Email" type="email" placeholder="you@example.com" required />

                        <label for="phone">Phone</label>
                        <input id="phone" name="Phone" type="tel" placeholder="+91 98765 43210" />

                        <div class="booking-cta" style="margin-top:8px;">
                            <button type="submit" class="btn btn-primary" id="bookNowBtn">Book Now</button>
                            <button type="button" class="btn btn-secondary" id="loginBtn" onclick="location.href='/Account/Login'">Login</button>
                        </div>

                        <p style="font-size:13px; color:#666; margin-top:8px;">
                            Sunrise visit timing subject to monument rules. Premium tickets / private guides can be added later.
                        </p>
                    </form>
                </aside>
            </div>

        </div>
    </div>

    <script src="/js/TajMahal.js"></script>
</body>
</html> 