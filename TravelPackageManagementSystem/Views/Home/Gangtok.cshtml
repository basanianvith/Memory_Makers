@{
    ViewBag.Title = "Gangtok Travel Package";
    Layout = null;   // remove if you are using _Layout.cshtml
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Gangtok Travel Package</title>

    <link rel="stylesheet" href="/css/Gangtok.css" />
</head>

<body>

    <!-- HERO IMAGE -->
    <section class="hero">
        <img class="hero-img" src="/lib/Image/gangtok.jpg" alt="Gangtok" />
        <div class="hero-content">
            <h1>Gangtok & Sikkim: Lakes, Monasteries & Mountain Views</h1>
            <p>5 Days • Comfortable mountain hotels • Guided sightseeing • Scenic drives</p>
        </div>
    </section>

    <!-- PACKAGE + BOOKING -->
    <div class="container">
        <div class="flex">

            <!-- LEFT / DETAILS -->
            <div class="left-col">

                <div class="package-header">
                    <div class="package-title">
                        <h2>Discover Sikkim: Gangtok, Tsomgo Lake, Rumtek, Nathula & Gurudongmar</h2>
                        <div class="rating">★ 4.7 (1,580 reviews)</div>
                    </div>

                    <div style="text-align: right;">
                        <div style="font-size: 14px; color:#666;">Duration</div>
                        <div style="font-weight:700; font-size:16px;">5 Days / 4 Nights</div>
                    </div>
                </div>

                <!-- IMAGE GALLERY -->
                <div class="gallery" aria-label="Image gallery">
                    <div id="mainImage" class="main-image" role="img" aria-label="Main image" style="background-image: url('/lib/Image/gangtok1.jpg');"></div>

                    <div class="thumbs" role="list">
                        <button class="thumb active" role="listitem" type="button" data-src="/lib/Image/gangtok1.jpg" style="background-image: url('/lib/Image/gangtok1.jpg');" aria-label="Gangtok"></button>
                        <button class="thumb" role="listitem" type="button" data-src="/lib/Image/gangtok2.jpg" style="background-image: url('/lib/Image/gangtok2.jpg');" aria-label="Tsomgo Lake"></button>
                        <button class="thumb" role="listitem" type="button" data-src="/lib/Image/gangtok3.jpg" style="background-image: url('/lib/Image/gangtok3.jpg');" aria-label="Rumtek Monastery"></button>
                        <button class="thumb" role="listitem" type="button" data-src="/lib/Image/gangtok4.jpg" style="background-image: url('/lib/Image/gangtok4.jpg');" aria-label="Gurudongmar Lake"></button>
                      
                    </div>
                </div>

                <!-- LIGHTBOX -->
                <div id="lightbox" class="lightbox" role="dialog" aria-modal="true" aria-hidden="true">
                    <img id="lightboxImg" src="" alt="Large view" />
                </div>

                <!-- PACKAGE DESCRIPTION -->
                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>
                        Explore the highlights of Sikkim with comfortable stays in Gangtok. Visit high-altitude lakes,
                        historic monasteries and scenic passes. Package includes hotel stays, private transfers,
                        guided sightseeing and select activities. (Some excursions such as Nathula & Gurudongmar may require permits and seasonal access.)
                    </p>
                </div>

                <!-- ITINERARY -->
                <div class="itinerary" aria-label="Day by day itinerary">
                    <h3 style="margin-bottom:10px;">Day-by-Day Itinerary</h3>

                    <div class="day">
                        <div class="day-header" data-day="1">
                            <h4>Day 1 — Arrival in Gangtok</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Arrival at Bagdogra / NJP, transfer to Gangtok. Evening stroll at MG Marg and local market visit.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="2">
                            <h4>Day 2 — Tsomgo Lake & Baba Mandir</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Full-day excursion to Tsomgo Lake and Baba Harbhajan Singh Mandir (subject to local conditions).</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="3">
                            <h4>Day 3 — Rumtek Monastery & Local Sightseeing</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Visit Rumtek Monastery, Directorate of Handicrafts & Handloom, local viewpoints and cultural spots.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="4">
                            <h4>Day 4 — Nathula Pass / Gurudongmar (optional full-day)</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Optional excursion to Nathula Pass or a longer trip to Gurudongmar Lake (permits and seasonal access apply).</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="5">
                            <h4>Day 5 — Departure</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Checkout and transfer to NJP / Bagdogra for onward journey.</p>
                        </div>
                    </div>
                </div>

                <!-- PRICING & INCLUSIONS -->
                <div class="price-card" aria-label="Pricing and inclusions">
                    <div class="price-row">
                        <div>Base Price (per person)</div>
                        <div class="price-total" id="pricePerPerson">₹26,000</div>
                    </div>

                    <div class="price-row">
                        <div>Taxes & Fees</div>
                        <div>₹2,600</div>
                    </div>

                    <div class="price-row">
                        <div>Selected Guests</div>
                        <div id="priceSummary">1 person</div>
                    </div>

                    <hr style="margin:10px 0; border:none; border-top:1px solid #e6e9ef;" />

                    <div style="font-weight:700; display:flex; justify-content:space-between; align-items:center;">
                        <div>Total Payable</div>
                        <div class="price-total" id="totalPayable">₹28,600</div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Included</h4>
                        <div class="list-inline">
                            <div class="included">Hotel stays (4 nights)</div>
                            <div class="included">Daily breakfast</div>
                            <div class="included">Private transfers & sightseeing</div>
                            <div class="included">Local experienced guide</div>
                        </div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Excluded</h4>
                        <div class="list-inline">
                            <div class="excluded">Airfare / Train fare</div>
                            <div class="excluded">Permits (Nathula/Gurudongmar) & activity fees</div>
                            <div class="excluded">Meals not specified</div>
                            <div class="excluded">Personal expenses</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- RIGHT / BOOKING -->
            <div class="right-col">
                <aside class="booking-box" aria-labelledby="bookingHeading">
                    <h3 id="bookingHeading">Book This Package</h3>

                    <form id="bookingForm" method="post" action="/Booking/Start">
                        <label for="travelDate">Travel Date</label>
                        <input id="travelDate" name="TravelDate" type="date" required />

                        <label for="guests">Guests</label>
                        <select id="guests" name="Guests" required>
                            <option value="1" selected>1 person</option>
                            <option value="2">2 persons</option>
                            <option value="3">3 persons</option>
                            <option value="4">4 persons</option>
                        </select>

                        <label for="contactEmail">Contact Email</label>
                        <input id="contactEmail" name="Email" type="email" placeholder="you@example.com" required />

                        <label for="phone">Phone</label>
                        <input id="phone" name="Phone" type="tel" placeholder="+91 98765 43210" />

                        <div class="booking-cta" style="margin-top:8px;">
                            <button type="submit" class="btn btn-primary" id="bookNowBtn" asp-controller="Home" asp-action="PaymentPage">Book Now</button>
                        </div>

                        <p style="font-size:13px; color:#666; margin-top:8px;">
                            You'll be redirected to confirm availability and payment. For high-altitude excursions, permits and seasonal restrictions may apply.
                        </p>
                    </form>
                </aside>
            </div>

        </div>
    </div>

    <script src="/js/Gangtok.js"></script>
</body>
</html>