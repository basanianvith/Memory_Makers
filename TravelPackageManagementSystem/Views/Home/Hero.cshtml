@* Updated Hero.cshtml - Unified Version *@
@{
    Layout = "_Layout"; // Ensures it uses your layout
}

<style>
    /* 1. Fix the Confirm Password Label Alignment */
    #authModal .input-label {
        display: block;
        width: 100%;
        text-align: left;
    }

    /* 2. Target ONLY the footer inside the modal */
    #authModal .footer-text {
        color: rgba(255, 255, 255, 0.6) !important;
        font-size: 0.9rem;
    }

    #authModal .footer-link {
        color: #ffffff !important; /* Forces white only in the modal */
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        #authModal .footer-link:hover {
            color: #00d2ff !important;
            text-decoration: underline;
        }

    /* 3. Ensure inputs take full width */
    #authModal .auth-input {
        width: 100%;
    }
</style>

