@{
    ViewBag.Title = "Uttarakhand | Land of the Gods";
}

<link rel="stylesheet" href="~/css/travel-style.css" />
<style>
    :root {
        --accent-color: #27ae60; /* Forest Green */
        --bg-gradient: linear-gradient(135deg, #134e5e 0%, #2f4f4f 100%);
    }

    /* Centering and Typography Enhancement */
    .hero-text, .gallery-title {
        text-align: center;
        margin-top: 50px;
        margin-bottom: 30px;
    }

        .hero-text h1 {
            font-size: 3.5rem;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 10px;
        }

        .hero-text span {
            color: var(--accent-color);
            text-shadow: 2px 2px 15px rgba(39, 174, 96, 0.4);
        }

    .gallery-title {
        font-size: 2.5rem;
        font-weight: 700;
        width: 100%;
    }

        .gallery-title span {
            color: var(--accent-color);
        }
</style>

<div class="main-page">
    <div class="hero-text">
        <h1>Explore <span>Uttarakhand</span></h1>
        <p>Peak performance for your soul.</p>
    </div>

    <div class="packages-section">
        <div class="pkg-card" onclick="selectPkg('Rishikesh Quick Retreat')">
            <div class="pkg-img" style="background-image: url('https://images.unsplash.com/photo-1584132967334-10e028bd69f7?w=400');"></div>
            <div class="pkg-body">
                <h3>Rishikesh Quick Retreat</h3>
                <p>3 Days • Rishikesh</p>
                <div class="pkg-price">₹6,999</div>
                <button class="select-btn">Book Trip</button>
            </div>
        </div>

        <div class="pkg-card highlight" onclick="selectPkg('Mussoorie Special')">
            <div class="pkg-img" style="background-image: url('https://images.unsplash.com/photo-1626621341517-bbf3d9990a23?w=400');"></div>
            <div class="pkg-body">
                <span class="hot-tag">Alpine Special</span>
                <h3>Mussoorie Special</h3>
                <p>6 Days • Trekking</p>
                <div class="pkg-price">₹19,499</div>
                <button class="select-btn">Book Trip</button>
            </div>
        </div>

        <div class="pkg-card" onclick="selectPkg('Himalayan Grand Explorer')">
            <div class="pkg-img" style="background-image: url('https://images.unsplash.com/photo-1622644402988-286a107cf1c9?w=400');"></div>
            <div class="pkg-body">
                <h3>Himalayan Grand Explorer</h3>
                <p>4 Days • Nainital & Bhimtal</p>
                <div class="pkg-price">₹10,999</div>
                <button class="select-btn">Book Trip</button>
            </div>
        </div>
    </div>

    <h2 class="gallery-title">Sacred Peaks & <span>Hidden Valleys</span></h2>

    <div class="auto-scroll-container">
        <div class="scroll-track">
            <div class="gem-item"><img src="https://images.unsplash.com/photo-1584132967334-10e028bd69f7?w=300"><span>Chopta (Mini Switzerland)</span></div>
            <div class="gem-item"><img src="https://images.unsplash.com/photo-1626621341517-bbf3d9990a23?w=300"><span>Valley of Flowers</span></div>
            <div class="gem-item"><img src="https://images.unsplash.com/photo-1593181629936-11c609b8db9b?w=300"><span>Auli Ski Resort</span></div>
            <div class="gem-item"><img src="https://images.unsplash.com/photo-1622644402988-286a107cf1c9?w=300"><span>Munsiyari Peaks</span></div>
            <div class="gem-item"><img src="https://images.unsplash.com/photo-1626621341517-bbf3d9990a23?w=300"><span>Lansdowne Hills</span></div>
            <div class="gem-item"><img src="https://images.unsplash.com/photo-1584132967334-10e028bd69f7?w=300"><span>Chopta (Mini Switzerland)</span></div>
            <div class="gem-item"><img src="https://images.unsplash.com/photo-1626621341517-bbf3d9990a23?w=300"><span>Valley of Flowers</span></div>
            <div class="gem-item"><img src="https://images.unsplash.com/photo-1593181629936-11c609b8db9b?w=300"><span>Auli Ski Resort</span></div>
        </div>
    </div>
</div>

<script>
    function selectPkg(name) { alert("Your adventure in " + name + " starts soon!"); }
    function selectPkg(name) {
            // UTTARAKHAND REDIRECTS
            switch (name) {
    case 'Rishikesh Quick Retreat':
        window.location.href = '/Home/UttaraPack1';
        break;

    case 'Mussoorie Special':
        window.location.href = '/Home/UttaraPack2';
        break;

    case 'Himalayan Grand Explorer':
        window.location.href = '/Home/UttaraPack3';
        break;
    }
    }
</script>