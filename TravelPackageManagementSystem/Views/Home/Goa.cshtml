@{
    ViewBag.Title = "Goa Package Details";
    Layout = null;   // remove if you are using _Layout.cshtml
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="@(Url.Content("~/css/Goa.css"))" />
</head>

<body>

    <!-- HERO IMAGE -->
    <section class="hero">
        <div class="hero-content">
            <h1>Goa Holiday Package</h1>
            <p>6 Days • Beaches • Forts • Nightlife</p>
        </div>
    </section>

    <!-- PACKAGE + BOOKING -->
    <div class="container">
        <div class="flex">

            <!-- LEFT / DETAILS -->
            <div class="left-col">

                <div class="package-header">
                    <div class="package-title">
                        <h2>Goa: Beaches, Forts & Nightlife</h2>
                        <div class="rating">★ 4.7 (2,180 reviews)</div>
                    </div>

                    <div style="text-align: right;">
                        <div style="font-size: 14px; color:#666;">Duration</div>
                        <div style="font-weight:700; font-size:16px;">6 Days / 5 Nights</div>
                    </div>
                </div>

                <!-- IMAGE GALLERY -->
                <div class="gallery" aria-label="Image gallery">
                    <div id="mainImage" class="main-image" role="img" aria-label="Main image" style="background-image: url('@Url.Content("~/lib/image/goa pic 1.jpg")');"></div>

                    <div class="thumbs" role="list">
                        <button class="thumb active" role="listitem" tabindex="0" type="button" data-src="@Url.Content("~/lib/image/goa pic2.jpg")" style="background-image: url('@Url.Content("~/lib/image/goa pic2.jpg")');" aria-label="Baga"></button>
                        <button class="thumb" role="listitem" tabindex="0" type="button" data-src="@Url.Content("~/lib/image/goa pic3.jpg")" style="background-image: url('@Url.Content("~/lib/image/goa pic3.jpg")');" aria-label="Palolem"></button>
                        <button class="thumb" role="listitem" tabindex="0" type="button" data-src="@Url.Content("~/lib/image/goa pic4.jpg")" style="background-image: url('@Url.Content("~/lib/image/goa pic4.jpg")');" aria-label="Fort"></button>
                        <button class="thumb" role="listitem" tabindex="0" type="button" data-src="@Url.Content("~/lib/image/goa pic5.jpg")" style="background-image: url('@Url.Content("~/lib/image/goa pic5.jpg")');" aria-label="Panaji"></button>
                    </div>
                </div>

                <!-- LIGHTBOX -->
                <div id="lightbox" class="lightbox" role="dialog" aria-modal="true" aria-hidden="true">
                    <img id="lightboxImg" src="" alt="Large view" />
                </div>

                <!-- PACKAGE DESCRIPTION -->
                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>
                        Experience Goa's sun-drenched beaches, historic Portuguese heritage and lively nightlife.
                        This package covers North Goa beach towns, Old Goa's churches and Panaji's riverside charm,
                        a relaxing stay in South Goa and optional water-sports and sunset cruises. Comfortable hotels,
                        local transport and guided sightseeing included.
                    </p>
                </div>

                <!-- ITINERARY -->
                <div class="itinerary" aria-label="Day by day itinerary">
                    <h3 style="margin-bottom:10px;">Day-by-Day Itinerary</h3>

                    <div class="day">
                        <div class="day-header" data-day="1">
                            <h4>Day 1 — Arrival in Goa (North Goa)</h4>
                            <div class="toggle" aria-hidden="true">+</div>
                        </div>
                        <div class="day-body">
                            <p>Arrival at Goa, transfer to North Goa. Evening at Baga/Calangute — beach stroll and optional dinner by the sea.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="2">
                            <h4>Day 2 — North Goa Sightseeing & Water Activities</h4>
                            <div class="toggle" aria-hidden="true">+</div>
                        </div>
                        <div class="day-body">
                            <p>Water sports, Fort Aguada visit and local markets. Nightlife exploration in popular beach shacks or clubs (optional).</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="3">
                            <h4>Day 3 — Old Goa & Panaji</h4>
                            <div class="toggle" aria-hidden="true">+</div>
                        </div>
                        <div class="day-body">
                            <p>Visit UNESCO churches in Old Goa, then explore Panaji — Latin Quarter, riverfront and Dona Paula viewpoint.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="4">
                            <h4>Day 4 — Transfer to South Goa (Relax)</h4>
                            <div class="toggle" aria-hidden="true">+</div>
                        </div>
                        <div class="day-body">
                            <p>Transfer to South Goa. Relax on Palolem/Colva beach, enjoy a quieter beach experience and seaside dining.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="5">
                            <h4>Day 5 — Spice Plantation & Sunset Cruise</h4>
                            <div class="toggle" aria-hidden="true">+</div>
                        </div>
                        <div class="day-body">
                            <p>Optional spice plantation tour, local village walk and a sunset cruise on the Mandovi or nearby backwaters.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="6">
                            <h4>Day 6 — Departure</h4>
                            <div class="toggle" aria-hidden="true">+</div>
                        </div>
                        <div class="day-body">
                            <p>Checkout and transfer to Goa airport/railway station for onward journey.</p>
                        </div>
                    </div>

                </div>

                <!-- PRICING & INCLUSIONS -->
                <div class="price-card" aria-label="Pricing and inclusions">
                    <div class="price-row">
                        <div>Base Price (per person)</div>
                        <div class="price-total" id="pricePerPerson">₹25,000</div>
                    </div>

                    <div class="price-row">
                        <div>Taxes & Fees</div>
                        <div>₹2,250</div>
                    </div>

                    <div class="price-row">
                        <div>Selected Guests</div>
                        <div id="priceSummary">1 person</div>
                    </div>

                    <hr style="margin:10px 0; border:none; border-top:1px solid #e6e9ef;" />

                    <div style="font-weight:700; display:flex; justify-content:space-between; align-items:center;">
                        <div>Total Payable</div>
                        <div class="price-total" id="totalPayable">₹27,250</div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Included</h4>
                        <div class="list-inline">
                            <div class="included">Hotel stays (5 nights)</div>
                            <div class="included">Daily breakfast</div>
                            <div class="included">All transfers & sightseeing</div>
                            <div class="included">Experienced guide</div>
                        </div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Excluded</h4>
                        <div class="list-inline">
                            <div class="excluded">Airfare / Train fare</div>
                            <div class="excluded">Meals not specified</div>
                            <div class="excluded">Personal expenses</div>
                            <div class="excluded">Permit fees (if any)</div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- RIGHT / BOOKING -->
            <div class="right-col">
                <aside class="booking-box" aria-labelledby="bookingHeading">
                    <h3 id="bookingHeading">Book This Package</h3>

                    <form id="bookingForm" method="post" action="/Home/PaymentPage">
                        <label for="travelDate">Travel Date</label>
                        <input id="travelDate" name="TravelDate" type="date" required />

                        <label for="guests">Guests</label>
                        <select id="guests" name="Guests" required>
                            <option value="1" selected>1 person</option>
                            <option value="2">2 persons</option>
                            <option value="3">3 persons</option>
                            <option value="4">4 persons</option>
                        </select>

                        <label for="contactEmail">Contact Email</label>
                        <input id="contactEmail" name="Email" type="email" placeholder="you@example.com" required />

                        <label for="phone">Phone</label>
                        <input id="phone" name="Phone" type="tel" placeholder="+91 98765 43210" />

                        <div class="booking-cta" style="margin-top:8px;">
                            <button type="submit" class="btn btn-primary" id="bookNowBtn">Book Now</button>
                        </div>

                        <p style="font-size:13px; color:#666; margin-top:8px;">
                            You'll be redirected to confirm availability and payment. For group bookings, contact <a href="mailto:groups@example.com">groups@example.com</a>.
                        </p>
                    </form>
                </aside>
            </div>

        </div>
    </div>

    <script src="@(Url.Content("~/js/Goa.js"))" defer></script>
</body>
</html>