@{
    ViewBag.Title = "Manali Travel Package";
    Layout = null;   // remove if you are using _Layout.cshtml
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Manali Travel Package</title>

    <link rel="stylesheet" href="/css/Manali.css" />
</head>

<body>

    <!-- HERO IMAGE -->
    <section class="hero">
        <img class="hero-img" src="/lib/Image/manali.jpg" alt="Manali" />
        <div class="hero-content">
            <h1>Manali: Mountains, Adventure & Valley Trails</h1>
            <p>4 Days • Solang Valley • Rohtang Pass • Old Manali</p>
        </div>
    </section>

    <!-- PACKAGE + BOOKING -->
    <div class="container">
        <div class="flex">

            <!-- LEFT / DETAILS -->
            <div class="left-col">

                <div class="package-header">
                    <div class="package-title">
                        <h2>Manali & Surrounds — Solang, Rohtang, Hadimba & Vashisht</h2>
                        <div class="rating">★ 4.8 (1,120 reviews)</div>
                    </div>

                    <div style="text-align: right;">
                        <div style="font-size: 14px; color:#666;">Duration</div>
                        <div style="font-weight:700; font-size:16px;">4 Days / 3 Nights</div>
                    </div>
                </div>

                <!-- IMAGE GALLERY -->
                <div class="gallery" aria-label="Image gallery">
                    <div id="mainImage" class="main-image" role="img" aria-label="Main image" style="background-image: url('/lib/Image/man1.jpg');"></div>

                    <div class="thumbs" role="list">
                        <button class="thumb active" role="listitem" type="button" data-src="/lib/Image/manali1.jpg" style="background-image: url('/lib/Image/man1.jpg');" aria-label="Manali main"></button>
                        <button class="thumb" role="listitem" type="button" data-src="/lib/Image/man2.jpg" style="background-image: url('/lib/Image/man2.jpg');" aria-label="Solang Valley"></button>
                        <button class="thumb" role="listitem" type="button" data-src="/lib/Image/man3.jpg" style="background-image: url('/lib/Image/man3.jpg');" aria-label="Rohtang Pass"></button>
                        <button class="thumb" role="listitem" type="button" data-src="/lib/Image/man4.jpg" style="background-image: url('/lib/Image/man4.jpg');" aria-label="Hadimba Temple"></button>
                        <button class="thumb" role="listitem" type="button" data-src="/lib/Image/man5.jpg" style="background-image: url('/lib/Image/man5.jpg');" aria-label="Hadimba Temple"></button>

                    </div>
                </div>

                <!-- LIGHTBOX -->
                <div id="lightbox" class="lightbox" role="dialog" aria-modal="true" aria-hidden="true">
                    <img id="lightboxImg" src="" alt="Large view" />
                </div>

                <!-- PACKAGE DESCRIPTION -->
                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>
                        Experience the best of Manali — adventure at Solang Valley, scenic drives to Rohtang Pass (subject to permits),
                        spiritual stops at Hadimba Temple and relaxed walks in Old Manali & Vashisht. Comfortable mountain stays,
                        private transfers and guided local sightseeing included.
                    </p>
                </div>

                <!-- ITINERARY -->
                <div class="itinerary" aria-label="Day by day itinerary">
                    <h3 style="margin-bottom:10px;">Day-by-Day Itinerary</h3>

                    <div class="day">
                        <div class="day-header" data-day="1">
                            <h4>Day 1 — Arrival & Local Orientation</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Arrive in Manali. Check-in, explore Mall Road, optional evening at Old Manali cafes.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="2">
                            <h4>Day 2 — Solang Valley Activities</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Full day at Solang Valley — ropeway, zorbing, optional skiing/paragliding (seasonal).</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="3">
                            <h4>Day 3 — Rohtang Pass / Kullu Excursion</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Drive towards Rohtang Pass (permit required) or visit Kullu valley and local handicraft markets.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="4">
                            <h4>Day 4 — Hadimba Temple, Vashisht & Departure</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Visit Hadimba Temple, Vashisht hot springs, last-minute shopping and transfer for onward journey.</p>
                        </div>
                    </div>
                </div>

                <!-- PRICING & INCLUSIONS -->
                <div class="price-card" aria-label="Pricing and inclusions">
                    <div class="price-row">
                        <div>Base Price (per person)</div>
                        <div class="price-total" id="pricePerPerson">₹22,000</div>
                    </div>

                    <div class="price-row">
                        <div>Taxes & Fees</div>
                        <div>₹2,200</div>
                    </div>

                    <div class="price-row">
                        <div>Selected Guests</div>
                        <div id="priceSummary">1 person</div>
                    </div>

                    <hr style="margin:10px 0; border:none; border-top:1px solid #e6e9ef;" />

                    <div style="font-weight:700; display:flex; justify-content:space-between; align-items:center;">
                        <div>Total Payable</div>
                        <div class="price-total" id="totalPayable">₹24,200</div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Included</h4>
                        <div class="list-inline">
                            <div class="included">Hotel stays (3 nights)</div>
                            <div class="included">Daily breakfast</div>
                            <div class="included">Private transfers & sightseeing</div>
                            <div class="included">Local experienced guide</div>
                        </div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Excluded</h4>
                        <div class="list-inline">
                            <div class="excluded">Rohtang permit & activity fees</div>
                            <div class="excluded">Meals not specified</div>
                            <div class="excluded">Adventure activity charges</div>
                            <div class="excluded">Personal expenses</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- RIGHT / BOOKING -->
            <div class="right-col">
                <aside class="booking-box" aria-labelledby="bookingHeading">
                    <h3 id="bookingHeading">Book This Package</h3>

                    <form id="bookingForm" method="post" action="/Home/PaymentPage">
                        <label for="travelDate">Travel Date</label>
                        <input id="travelDate" name="TravelDate" type="date" required />

                        <label for="guests">Guests</label>
                        <select id="guests" name="Guests" required>
                            <option value="1" selected>1 person</option>
                            <option value="2">2 persons</option>
                            <option value="3">3 persons</option>
                            <option value="4">4 persons</option>
                        </select>

                        <label for="contactEmail">Contact Email</label>
                        <input id="contactEmail" name="Email" type="email" placeholder="you@example.com" required />

                        <label for="phone">Phone</label>
                        <input id="phone" name="Phone" type="tel" placeholder="+91 98765 43210" />

                        <div class="booking-cta" style="margin-top:8px;">
                            <button type="submit" class="btn btn-primary" id="bookNowBtn" asp-controller="Home" asp-action="PaymentPage">Book Now</button>
                        </div>

                        <p style="font-size:13px; color:#666; margin-top:8px;">
                            You'll be redirected to confirm availability and payment. For Rohtang Pass travel, permits and seasonal access apply.
                        </p>
                    </form>
                </aside>
            </div>

        </div>
    </div>

    <script src="/js/Manali.js"></script>
</body>
</html>