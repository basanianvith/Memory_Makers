@{
    ViewBag.Title = "Meghalaya Explorer Details";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Meghalaya Explorer (Premium)</title>
    <link rel="stylesheet" href="~/css/pack-details.css" />
</head>

<body>
    <section class="hero" style="background-image: url('/lib/Image/meghalaya.jpg')">
        <div class="hero-content">
            <h1>Meghalaya Explorer (Premium)</h1>
            <p>7 Days • Offbeat Treks • Cultural Visits • Professional Guides</p>
        </div>
    </section>

    <div class="container">
        <div class="flex">
            <div class="left-col">
                <div class="package-header">
                    <div class="package-title">
                        <h2>Abode of Clouds: Extended Exploration</h2>
                        <div class="rating">★ 4.8 (210 reviews)</div>
                    </div>
                    <div style="text-align: right;">
                        <div style="font-size: 14px; color:#666;">Duration</div>
                        <div style="font-weight:700; font-size:16px;">7 Days / 6 Nights</div>
                    </div>
                </div>

                <div class="gallery">
                    <div id="mainImage" class="main-image" style="background-image: url('/lib/Image/meg1.jpg');"></div>
                    <div class="thumbs">
                        <div class="thumb active" data-src="/lib/Image/meghalaya.jpg" style="background-image: url('/lib/Image/meghalaya.jpg');"></div>
                        <div class="thumb" data-src="/lib/Image/meg3.jpg" style="background-image: url('/lib/Image/meg3.jpg');"></div>
                        <div class="thumb" data-src="/lib/Image/meg4.jpg" style="background-image: url('/lib/Image/meg4.jpg');"></div>
                        <div class="thumb" data-src="/lib/Image/meg5.jpg" style="background-image: url('/lib/Image/meg5.jpg');"></div>
                        <div class="thumb" data-src="/lib/Image/meg2.jpg" style="background-image: url('/lib/Image/meg2.jpg');"></div>

                    </div>
                </div>

                <div id="lightbox" class="lightbox">
                    <img id="lightboxImg" src="" alt="Large view" />
                </div>

                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>
                        Experience the raw beauty of Meghalaya with our premium 7-day tour.
                        Includes treks to double-decker living root bridges, crystal clear river boating in Dawki,
                        and exploration of Asia's cleanest village, Mawlynnong.
                    </p>
                </div>

                <div class="itinerary">
                    <h3 style="margin-bottom:10px;">Day-by-Day Itinerary</h3>
                    <div class="day">
                        <div class="day-header">
                            <h4>Day 1 — Arrival in Shillong</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Pick up from Guwahati and transfer to the "Scotland of the East," Shillong. Evening at Police Bazar.</p>
                        </div>
                    </div>
                    <div class="day">
                        <div class="day-header">
                            <h4>Day 2 — Laitlum Canyons & Krang Suri</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Breathtaking views at Laitlum and a dip in the turquoise waters of Krang Suri Falls.</p>
                        </div>
                    </div>
                    <div class="day">
                        <div class="day-header">
                            <h4>Day 3-7 — Root Bridges, Dawki & Departure</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Extended exploration of Cherrapunji's caves, root bridges, and the clear waters of Shnongpdeng.</p>
                        </div>
                    </div>
                </div>

                <div class="price-card">
                    <div class="price-row">
                        <div>Base Price (per person)</div>
                        <div class="price-total" id="pricePerPerson">₹25,999</div>
                    </div>
                    <div class="price-row">
                        <div>Selected Guests</div>
                        <div id="priceSummary">1 person</div>
                    </div>
                    <hr style="margin:10px 0; border:none; border-top:1px solid #e6e9ef;" />
                    <div style="font-weight:700; display:flex; justify-content:space-between; align-items:center;">
                        <div>Total Payable</div>
                        <div class="price-total" id="totalPayable">₹25,999</div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Included</h4>
                        <div class="list-inline">
                            <div class="included">Stay in Premium Resorts</div>
                            <div class="included">Professional Trekking Guide</div>
                            <div class="included">Private SUV for Sightseeing</div>
                            <div class="included">Entry Permits & Fees</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="right-col">
                <aside class="booking-box">
                    <h3>Book This Package</h3>
                    <form id="bookingForm">
                        <label for="travelDate">Travel Date</label>
                        <input id="travelDate" type="date" required />

                        <label for="guests">Guests</label>
                        <select id="guests">
                            <option value="1">1 person</option>
                            <option value="2">2 persons</option>
                            <option value="3">3 persons</option>
                            <option value="4">4 persons</option>
                        </select>

                        <label for="contactEmail">Contact Email</label>
                        <input id="contactEmail" type="email" placeholder="you@example.com" required />

                        <label for="phone">Phone</label>
                        <input id="phone" type="tel" placeholder="+91 98765 43210" required />

                        <button type="submit" class="btn btn-primary">Book Now</button>
                        <p style="font-size:12px; color:#666; margin-top:8px; text-align:center;">
                            You'll be redirected to confirm availability.
                        </p>
                    </form>
                </aside>
            </div>
        </div>
    </div>

    <script>
        (function () {
            // Gallery Logic
            const main = document.getElementById('mainImage');
            const thumbs = document.querySelectorAll('.thumb');
            const lightbox = document.getElementById('lightbox');
            const lightboxImg = document.getElementById('lightboxImg');

            thumbs.forEach(t => {
                t.addEventListener('click', () => {
                    thumbs.forEach(x => x.classList.remove('active'));
                    t.classList.add('active');
                    const src = t.dataset.src;
                    main.style.backgroundImage = `url('${src}')`;
                    lightboxImg.src = src;
                });
            });

            main.addEventListener('click', () => { lightbox.style.display = 'flex'; });
            lightbox.addEventListener('click', () => { lightbox.style.display = 'none'; });

            // Itinerary Accordion
            document.querySelectorAll('.day-header').forEach(h => {
                h.addEventListener('click', () => {
                    const body = h.nextElementSibling;
                    const isOpen = body.style.display === 'block';
                    document.querySelectorAll('.day-body').forEach(db => db.style.display = 'none');
                    document.querySelectorAll('.toggle').forEach(tg => tg.textContent = '+');
                    if (!isOpen) {
                        body.style.display = 'block';
                        h.querySelector('.toggle').textContent = '−';
                    }
                });
            });

            // Price Logic
            const guestsSelect = document.getElementById('guests');
            const basePrice = 25999;
            guestsSelect.addEventListener('change', () => {
                const count = parseInt(guestsSelect.value);
                const total = basePrice * count;
                document.getElementById('totalPayable').textContent = `₹${total.toLocaleString()}`;
                document.getElementById('priceSummary').textContent = `${count} ${count > 1 ? 'persons' : 'person'}`;
            });
        })();
    </script>
</body>
</html>