<!-- ADMIN LOGIN MODAL -->
<div class="custom-modal" id="adminLoginModal">
    <div class="modal-box">
        <h4>Admin Login</h4>
        <p class="text-muted">Authorized access only</p>

        <input type="email" id="adminEmail" placeholder="Email Address" />
        <input type="password" id="adminPassword" placeholder="Password" />

        <p id="adminError" style="color:red; display:none; font-size:13px;">
            Invalid email or password
        </p>

        <div class="modal-actions">
            <button class="btn-cancel" onclick="closeAdminLogin()">Cancel</button>
            <button class="btn-confirm" onclick="adminLogin()">Login</button>
        </div>
    </div>
</div>

<style>
    .custom-modal {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,.6);
        display: none;
        align-items: center;
        justify-content: center;
        backdrop-filter: blur(4px);
        z-index: 9999;
    }

        .custom-modal.show {
            display: flex;
        }

    .modal-box {
        background: #fff;
        padding: 30px;
        border-radius: 18px;
        width: 320px;
        text-align: center;
        box-shadow: 0 20px 45px rgba(0,0,0,.35);
        animation: fadeIn .4s ease;
    }

        .modal-box input {
            width: 100%;
            padding: 10px;
            margin-top: 12px;
            border-radius: 10px;
            border: 1px solid #ddd;
        }

    .modal-actions {
        margin-top: 20px;
        display: flex;
        justify-content: center;
        gap: 14px;
    }

    .btn-cancel {
        padding: 8px 18px;
        border-radius: 12px;
        border: 1px solid #ccc;
        background: #f8f8f8;
        cursor: pointer;
    }

    .btn-confirm {
        padding: 8px 20px;
        border-radius: 12px;
        border: none;
        background: linear-gradient(135deg, #3498db, #1f6fae);
        color: #fff;
        cursor: pointer;
    }
</style>

<script>
    function openAdminLogin() {
        document.getElementById("adminLoginModal").classList.add("show");
    }

    function closeAdminLogin() {
        document.getElementById("adminLoginModal").classList.remove("show");
        document.getElementById("adminError").style.display = "none";
    }

    function adminLogin() {
        const email = document.getElementById("adminEmail").value;
        const password = document.getElementById("adminPassword").value;

        if (email === "easysafar@gmail.com" && password === "MemoryMakers@123456") {
            window.location.href = "/Admin/Dashboard";
        } else {
            document.getElementById("adminError").style.display = "block";
        }
    }
</script>
