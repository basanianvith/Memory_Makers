@{
    ViewBag.Title = "Banaras Travel Package";
    Layout = null;   // remove if you are using _Layout.cshtml
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Banaras Travel Package</title>

    <link rel="stylesheet" href="/css/Banaras.css" />
</head>

<body>

    <!-- HERO IMAGE -->
    <section class="hero">
        <img class="hero-img" src="/lib/Image/banaras.jpg" alt="Banaras" />
        <div class="hero-content">
            <h1>Banaras: Ghats, Temples & Timeless Traditions</h1>
            <p>3 Days • Ganga Aarti • Boat ride • Heritage walks</p>
        </div>
    </section>

    <!-- PACKAGE + BOOKING -->
    <div class="container">
        <div class="flex">

            <!-- LEFT / DETAILS -->
            <div class="left-col">

                <div class="package-header">
                    <div class="package-title">
                        <h2>Discover Banaras: Kashi Vishwanath, Sarnath, Dashashwamedh & Ramnagar</h2>
                        <div class="rating">★ 4.6 (1,024 reviews)</div>
                    </div>

                    <div style="text-align: right;">
                        <div style="font-size: 14px; color:#666;">Duration</div>
                        <div style="font-weight:700; font-size:16px;">3 Days / 2 Nights</div>
                    </div>
                </div>

                <!-- IMAGE GALLERY -->
                <div class="gallery" aria-label="Image gallery">
                    <div id="mainImage" class="main-image" role="img" aria-label="Main image" style="background-image: url('/lib/Image/banaras1.jpg');"></div>

                    <div class="thumbs" role="list">
                        <button class="thumb active" role="listitem" type="button" data-src="/lib/Image/banaras1.jpg" style="background-image: url('/lib/Image/banaras1.jpg');" aria-label="Kashi Vishwanath"></button>
                        <button class="thumb" role="listitem" type="button" data-src="/lib/Image/banaras2.jpg" style="background-image: url('/lib/Image/banaras2.jpg');" aria-label="Dashashwamedh Ghat"></button>
                        <button class="thumb" role="listitem" type="button" data-src="/lib/Image/banaras3.jpg" style="background-image: url('/lib/Image/banaras3.jpg');" aria-label="Sarnath"></button>
                        <button class="thumb" role="listitem" type="button" data-src="/lib/Image/banaras4.jpg" style="background-image: url('/lib/Image/banaras4.jpg');" aria-label="Ramnagar Fort"></button>
                    </div>
                </div>

                <!-- LIGHTBOX -->
                <div id="lightbox" class="lightbox" role="dialog" aria-modal="true" aria-hidden="true">
                    <img id="lightboxImg" src="" alt="Large view" />
                </div>

                <!-- PACKAGE DESCRIPTION -->
                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>
                        Experience the spiritual heart of India. Witness the Ganga Aarti at the ghats, explore
                        ancient temples and the Buddhist site of Sarnath, and stroll through narrow lanes of old Banaras.
                        Comfortable city hotels, guided heritage walks, private transfers and a sunrise boat ride on the Ganges are included.
                    </p>
                </div>

                <!-- ITINERARY -->
                <div class="itinerary" aria-label="Day by day itinerary">
                    <h3 style="margin-bottom:10px;">Day-by-Day Itinerary</h3>

                    <div class="day">
                        <div class="day-header" data-day="1">
                            <h4>Day 1 — Arrival & Ganga Aarti</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Arrive in Banaras. Evening visit to Dashashwamedh Ghat to witness the Ganga Aarti and local street life.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="2">
                            <h4>Day 2 — Sarnath & Temple Circuit</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Visit Sarnath (Buddhist ruins & museum). Afternoon tour of Kashi Vishwanath Temple, narrow lanes, and silk markets.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="3">
                            <h4>Day 3 — Sunrise Boat Ride & Departure</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Early morning boat ride on the Ganges at sunrise, visit Assi Ghat, then checkout and transfer for onward journey.</p>
                        </div>
                    </div>
                </div>

                <!-- PRICING & INCLUSIONS -->
                <div class="price-card" aria-label="Pricing and inclusions">
                    <div class="price-row">
                        <div>Base Price (per person)</div>
                        <div class="price-total" id="pricePerPerson">₹12,000</div>
                    </div>

                    <div class="price-row">
                        <div>Taxes & Fees</div>
                        <div>₹1,200</div>
                    </div>

                    <div class="price-row">
                        <div>Selected Guests</div>
                        <div id="priceSummary">1 person</div>
                    </div>

                    <hr style="margin:10px 0; border:none; border-top:1px solid #e6e9ef;" />

                    <div style="font-weight:700; display:flex; justify-content:space-between; align-items:center;">
                        <div>Total Payable</div>
                        <div class="price-total" id="totalPayable">₹13,200</div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Included</h4>
                        <div class="list-inline">
                            <div class="included">City hotel stays (2 nights)</div>
                            <div class="included">Daily breakfast</div>
                            <div class="included">Private transfers & sightseeing</div>
                            <div class="included">Sunrise Ganges boat ride</div>
                        </div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Excluded</h4>
                        <div class="list-inline">
                            <div class="excluded">Airfare / Train fare</div>
                            <div class="excluded">Temple donations / entry fees</div>
                            <div class="excluded">Meals not specified</div>
                            <div class="excluded">Personal expenses</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- RIGHT / BOOKING -->
            <div class="right-col">
                <aside class="booking-box" aria-labelledby="bookingHeading">
                    <h3 id="bookingHeading">Book This Package</h3>

                    <form id="bookingForm" method="post" action="/Booking/Start">
                        <label for="travelDate">Travel Date</label>
                        <input id="travelDate" name="TravelDate" type="date" required />

                        <label for="guests">Guests</label>
                        <select id="guests" name="Guests" required>
                            <option value="1" selected>1 person</option>
                            <option value="2">2 persons</option>
                            <option value="3">3 persons</option>
                            <option value="4">4 persons</option>
                        </select>

                        <label for="contactEmail">Contact Email</label>
                        <input id="contactEmail" name="Email" type="email" placeholder="you@example.com" required />

                        <label for="phone">Phone</label>
                        <input id="phone" name="Phone" type="tel" placeholder="+91 98765 43210" />

                        <div class="booking-cta" style="margin-top:8px;">
                            <button type="submit" class="btn btn-primary" id="bookNowBtn" asp-controller="Home" asp-action="PaymentPage">Book Now</button>
                            <button type="button" class="btn btn-secondary" id="loginBtn" onclick="location.href='/Account/Login'">Login</button>
                        </div>

                        <p style="font-size:13px; color:#666; margin-top:8px;">
                            You'll be redirected to confirm availability and payment. Please respect local customs at temples and ghats.
                        </p>
                    </form>
                </aside>
            </div>

        </div>
    </div>

    <script src="/js/Banaras.js"></script>
</body>
</html>