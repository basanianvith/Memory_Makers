@{
    ViewBag.Title = "Tamil Nadu | The Land of Temples";
}

<link rel="stylesheet" href="~/css/travel-style.css" />
<style>
    :root {
        --accent-color: #8e1b1b; /* Heritage Maroon */
        --bg-gradient: linear-gradient(135deg, #2c3e50 0%, #000000 100%); /* Deep Night Gradient */
    }

    /* Hero text alignment fix to match your Uttarakhand style */
    .hero-text {
        text-align: center;
        padding: 60px 20px;
    }

        .hero-text h1 span {
            color: var(--accent-color);
        }
</style>

<div class="main-page">
    <div class="hero-text">
        <h1>Explore <span>Tamil Nadu</span></h1>
        <p>Where history breathes in every stone.</p>
    </div>

    <div class="packages-section">
        <div class="pkg-card" onclick="location.href='/Home/TamilnaduTD?id=tn-temple'">
            <img src="~/lib/TopDestination/Tanjore Royal Palace.jpg" alt="Tanjore Palace" />

            <div class="pkg-body">
                <h3>Temple Trail</h3>
                <p>4 Days • Madurai & Tanjore</p>
                <div class="pkg-price">₹12,499</div>
                <button class="select-btn">View Details</button>
            </div>
        </div>

        <div class="pkg-card highlight" onclick="location.href='/Home/TamilnaduTD?id=tn-heritage'">
            <img src="~/lib/TopDestination/PondicherryTD2.jpg" alt="Tanjore Palace" />
            <div class="pkg-body">
                <span class="hot-tag">Most Popular</span>
                <h3>Grand Heritage</h3>
                <p>6 Days • Pondicherry & Mahabs</p>
                <div class="pkg-price">₹18,999</div>
                <button class="select-btn">View Details</button>
            </div>
        </div>

        <div class="pkg-card" onclick="location.href='/Home/TamilnaduTD?id=tn-hill'">
            <img src="~/lib/TopDestination/OOtyTd.jpg" alt="Tanjore Palace" />
            <div class="pkg-body">
                <h3>Nilgiri Queen</h3>
                <p>5 Days • Ooty & Coonoor</p>
                <div class="pkg-price">₹15,499</div>
                <button class="select-btn">View Details</button>
            </div>
        </div>
    </div>

    <h2 class="gallery-title">Sacred Gopurams & Hidden Gems</h2>
    <div class="auto-scroll-container">
        <div class="scroll-track">
            <div class="gem-item"><img src="~/lib/TopDestination/Madurai.jpg"><span>Madurai</span></div>
            <div class="gem-item"><img src="~/lib/TopDestination/Mahabalipuram.jpg"><span>Mahabalipuram</span></div>
            <div class="gem-item"><img src="~/lib/TopDestination/OOtyTd2.jpg"><span>Ooty Hills</span></div>
            <div class="gem-item"><img src="~/lib/TopDestination/Dhanushkodi.jpg"><span>Dhanushkodi</span></div>
            <div class="gem-item"><img src="~/lib/TopDestination/Rameshwaram (2).jpg"><span>Rameshwaram</span></div>
            <div class="gem-item"><img src="~/lib/TopDestination/Kodaikanal.jpg"><span>Kodaikanal</span></div>
            <div class="gem-item"><img src="~/lib/TopDestination/Coimbatore.jpg"><span>Coimbatore</span></div>
        </div>
    </div>
</div>

