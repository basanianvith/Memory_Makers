                <i class="fab fa-x mx-3"></i> 
                <i class="fab fa-linkedin-in"></i>

                <span class="ms-4 text-white" style="cursor: pointer;">
                    <a asp-controller="Home" asp-action="Host" class="text-white text-decoration-none">
                        Become a Host
