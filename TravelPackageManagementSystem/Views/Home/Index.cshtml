@{
    ViewData["Title"] = "Home Page";
}

<style>
.hero {
    min-height: 60vh;
    position: relative;
    display: grid;
    place-items: center;
    text-align: center;
    padding: 4rem 1rem;
    background: url("https://img.freepik.com/premium-photo/sacred-ganges-river-varanasi-with-ancient-ghats_996201-69539.jpg") center/cover no-repeat;
    color: white;
    overflow: hidden;
    /* Optional: Add a subtle shadow so it "pops" off the footer */
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    margin-bottom: 2rem;
}

.hero, footer, .footer-section{
        width: 100vw;
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
}

.hero-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.5);
}

.hero-content {
    position: relative;
    z-index: 1;
}

/* Fix for the button to match the premium look */
.btn-glow {
    background: linear-gradient(135deg, #ff7b54, #ffd56b);
    border: none;
    padding: 0.8rem 2rem;
    border-radius: 50px; /* Fully rounded button */
    font-weight: 600;
    color: #111;
    transition: transform 0.2s;
}

    .btn-glow:hover {
        transform: scale(1.05);
    }
</style>

<div>
    <partial name="Hero" />
</div>


<div id="destination-section">
    <partial name="Destination" />
</div>

<div>
    <partial name="Trending" />
</div>

<header class="hero">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1 class="display-3 fw-bold">Travel Tips</h1>
        <p class="lead">Explore the world with our curated packages.</p>
        <a href="#destination-section" class="btn btn-glow">Get Inspired</a>
    </div>
</header>

<partial name="Footer" />