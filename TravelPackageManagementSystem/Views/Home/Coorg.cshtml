@{
    ViewBag.Title = "Coorg Package Details";
    Layout = null;   // remove if you are using _Layout.cshtml
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="@(Url.Content("~/css/Coorg.css"))" />
</head>

<body>

    <!-- HERO IMAGE -->
    <section class="hero" style="background-image: url('@Url.Content("~/lib/image/coorg1.jpg")');">
        <div class="hero-content">
            <h1>Coorg Coffee & Hills</h1>
            <p>3 Days • Coffee estates • Waterfalls • Madikeri</p>
        </div>
    </section>

    <!-- PACKAGE + BOOKING -->
    <div class="container">
        <div class="flex">

            <!-- LEFT / DETAILS -->
            <div class="left-col">

                <div class="package-header">
                    <div class="package-title">
                        <h2>Coorg: Coffee Country Escape</h2>
                        <div class="rating">★ 4.8 (1,850 reviews)</div>
                    </div>

                    <div style="text-align: right;">
                        <div style="font-size: 14px; color:#666;">Duration</div>
                        <div style="font-weight:700; font-size:16px;">3 Days / 2 Nights</div>
                    </div>
                </div>

                <!-- IMAGE GALLERY -->
                <div class="gallery" aria-label="Image gallery">
                    <div id="mainImage" class="main-image" role="img" aria-label="Main image"
                         style="background-image: url('@Url.Content("~/lib/image/coorg1.jpg")');"></div>

                    <div class="thumbs" role="list">
                        <button class="thumb active" role="listitem" tabindex="0" type="button"
                                data-src="@Url.Content("~/lib/image/coorg2.jpg")"
                                style="background-image: url('@Url.Content("~/lib/image/coorg2.jpg")');" aria-label="Madikeri"></button>

                        <button class="thumb" role="listitem" tabindex="0" type="button"
                                data-src="@Url.Content("~/lib/image/coorg3.jpg")"
                                style="background-image: url('@Url.Content("~/lib/image/coorg3.jpg")');" aria-label="Abbey Falls"></button>

                        <button class="thumb" role="listitem" tabindex="0" type="button"
                                data-src="@Url.Content("~/lib/image/coorg4.jpg")"
                                style="background-image: url('@Url.Content("~/lib/image/coorg4.jpg")');" aria-label="Coffee Estate"></button>

                        <button class="thumb" role="listitem" tabindex="0" type="button"
                                data-src="@Url.Content("~/lib/image/coorg5.jpg")"
                                style="background-image: url('@Url.Content("~/lib/image/coorg5.jpg")');" aria-label="River"></button>
                    </div>
                </div>

                <!-- LIGHTBOX -->
                <div id="lightbox" class="lightbox" role="dialog" aria-modal="true" aria-hidden="true">
                    <img id="lightboxImg" src="" alt="Large view" />
                </div>

                <!-- PACKAGE DESCRIPTION -->
                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>
                        Escape to Coorg's misty hills and aromatic coffee estates. Highlights include Abbey Falls, Raja's Seat,
                        coffee plantation experiences, and short nature walks. Comfortable hotels, local transfers and guided sightseeing included.
                    </p>
                </div>

                <!-- ITINERARY -->
                <div class="itinerary" aria-label="Day by day itinerary">
                    <h3 style="margin-bottom:10px;">Day-by-Day Itinerary</h3>

                    <div class="day">
                        <div class="day-header" data-day="1">
                            <h4>Day 1 — Arrival to Coorg (Madikeri)</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Arrival at Mangalore/Mysore and transfer to Coorg. Evening at leisure and short walk in the town or nearby viewpoints.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="2">
                            <h4>Day 2 — Abbey Falls, Raja's Seat & Coffee Estate</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Visit Abbey Falls, Raja's Seat for panoramic views, and tour a local coffee plantation with tasting. Optional nature walk.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="3">
                            <h4>Day 3 — Talacauvery / Local Sights & Departure</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Morning visit to Talacauvery or local scenic spots, checkout and transfer back to Mangalore/Mysore for onward connections.</p>
                        </div>
                    </div>

                </div>

                <!-- PRICING & INCLUSIONS -->
                <div class="price-card" aria-label="Pricing and inclusions">
                    <div class="price-row">
                        <div>Base Price (per person)</div>
                        <div class="price-total" id="pricePerPerson">₹14,500</div>
                    </div>

                    <div class="price-row">
                        <div>Taxes & Fees</div>
                        <div>₹1,305</div>
                    </div>

                    <div class="price-row">
                        <div>Selected Guests</div>
                        <div id="priceSummary">1 person</div>
                    </div>

                    <hr style="margin:10px 0; border:none; border-top:1px solid #e6e9ef;" />

                    <div style="font-weight:700; display:flex; justify-content:space-between; align-items:center;">
                        <div>Total Payable</div>
                        <div class="price-total" id="totalPayable">₹15,805</div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Included</h4>
                        <div class="list-inline">
                            <div class="included">Hotel stays (2 nights)</div>
                            <div class="included">Daily breakfast</div>
                            <div class="included">All transfers & sightseeing</div>
                            <div class="included">Experienced local guide</div>
                        </div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Excluded</h4>
                        <div class="list-inline">
                            <div class="excluded">Airfare / Train fare</div>
                            <div class="excluded">Entrance fees where applicable</div>
                            <div class="excluded">Personal expenses</div>
                            <div class="excluded">Meals not specified</div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- RIGHT / BOOKING -->
            <div class="right-col">
                <aside class="booking-box" aria-labelledby="bookingHeading">
                    <h3 id="bookingHeading">Book This Package</h3>

                    <form id="bookingForm" method="post" action="/Booking/Start">
                        <label for="travelDate">Travel Date</label>
                        <input id="travelDate" name="TravelDate" type="date" required />

                        <label for="guests">Guests</label>
                        <select id="guests" name="Guests" required>
                            <option value="1" selected>1 person</option>
                            <option value="2">2 persons</option>
                            <option value="3">3 persons</option>
                            <option value="4">4 persons</option>
                        </select>

                        <label for="contactEmail">Contact Email</label>
                        <input id="contactEmail" name="Email" type="email" placeholder="you@example.com" required />

                        <label for="phone">Phone</label>
                        <input id="phone" name="Phone" type="tel" placeholder="+91 98765 43210" />

                        <div class="booking-cta" style="margin-top:8px;">
                            <button type="submit" class="btn btn-primary" id="bookNowBtn">Book Now</button>
                            <button type="button" class="btn btn-secondary" id="loginBtn" onclick="location.href='@Url.Content("~/Account/Login")'">Login</button>
                        </div>

                        <p style="font-size:13px; color:#666; margin-top:8px;">
                            You'll be redirected to confirm availability and payment. For group bookings, contact <a href="mailto:groups@example.com">groups@example.com</a>.
                        </p>
                    </form>
                </aside>
            </div>

        </div>
    </div>

    <script src="@(Url.Content("~/js/Coorg.js"))" defer></script>
</body>
</html>