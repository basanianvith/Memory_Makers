@{
    ViewBag.Title = "Mumbai Package Details";
    Layout = null;   // remove if you are using _Layout.cshtml
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="@(Url.Content("~/css/Mumbai.css"))" />
</head>

<body>

    <!-- HERO IMAGE -->
    <section class="hero" style="background-image: url('@Url.Content("~/lib/image/mumbai1.jpg")');">
        <div class="hero-content">
            <h1>Mumbai City Break</h1>
            <p>5 Days • Gateway of India • Marine Drive • Elephanta Caves</p>
        </div>
    </section>

    <!-- PACKAGE + BOOKING -->
    <div class="container">
        <div class="flex">

            <!-- LEFT / DETAILS -->
            <div class="left-col">

                <div class="package-header">
                    <div class="package-title">
                        <h2>Mumbai: City Sights & Coast</h2>
                        <div class="rating">★ 4.5 (4,200 reviews)</div>
                    </div>

                    <div style="text-align: right;">
                        <div style="font-size: 14px; color:#666;">Duration</div>
                        <div style="font-weight:700; font-size:16px;">5 Days / 4 Nights</div>
                    </div>
                </div>

                <!-- IMAGE GALLERY -->
                <div class="gallery" aria-label="Image gallery">
                    <div id="mainImage" class="main-image" role="img" aria-label="Main image" style="background-image: url('@Url.Content("~/lib/image/mumbai1.jpg")');"></div>

                    <div class="thumbs" role="list">
                        <button class="thumb active" role="listitem" tabindex="0" type="button" data-src="@(Url.Content("~/lib/image/mumbai2.jpg"))" style="background-image: url('@Url.Content("~/lib/image/mumbai2.jpg")');" aria-label="Gateway of India"></button>
                        <button class="thumb" role="listitem" tabindex="0" type="button" data-src="@(Url.Content("~/lib/image/mumbai3.jpg"))" style="background-image: url('@Url.Content("~/lib/image/mumbai3.jpg")');" aria-label="Marine Drive"></button>
                        <button class="thumb" role="listitem" tabindex="0" type="button" data-src="@(Url.Content("~/lib/image/mumbai4.jpg"))" style="background-image: url('@Url.Content("~/lib/image/mumbai4.jpg")');" aria-label="Elephanta Caves"></button>
                        <button class="thumb" role="listitem" tabindex="0" type="button" data-src="@(Url.Content("~/lib/image/mumbai5.jpg"))" style="background-image: url('@Url.Content("~/lib/image/mumbai5.jpg")');" aria-label="Chowpatty"></button>
                    </div>
                </div>

                <!-- LIGHTBOX -->
                <div id="lightbox" class="lightbox" role="dialog" aria-modal="true" aria-hidden="true">
                    <img id="lightboxImg" src="" alt="Large view" />
                </div>

                <!-- PACKAGE DESCRIPTION -->
                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>
                        Explore Mumbai's vibrant culture, colonial landmarks and coastal promenades.
                        Highlights include the Gateway of India, Elephanta Caves, Marine Drive, Colaba Causeway and local cuisine.
                        Comfortable hotels, transfers and guided sightseeing included.
                    </p>
                </div>

                <!-- ITINERARY -->
                <div class="itinerary" aria-label="Day by day itinerary">
                    <h3 style="margin-bottom:10px;">Day-by-Day Itinerary</h3>

                    <div class="day">
                        <div class="day-header" data-day="1">
                            <h4>Day 1 — Arrival & Colaba Walk</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Arrival at Mumbai airport/VT and transfer to hotel. Evening stroll through Colaba Causeway and Gateway of India area.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="2">
                            <h4>Day 2 — Elephanta Caves & Harbour</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Boat ride to Elephanta Caves, explore rock-cut temples. Return and relax at Marine Drive in the evening.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="3">
                            <h4>Day 3 — South Mumbai Heritage Tour</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Visit Chhatrapati Shivaji Maharaj Terminus, the Prince of Wales Museum, and Crawford Market. Evening free for local cuisine.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="4">
                            <h4>Day 4 — Bollywood / Markets & Chowpatty</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Optional Bollywood studio visit or shopping in Bandra / Linking Rd. Sunset at Chowpatty Beach and Aarti at Banganga (optional).</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header" data-day="5">
                            <h4>Day 5 — Morning at Leisure & Departure</h4>
                            <div class="toggle">+</div>
                        </div>
                        <div class="day-body">
                            <p>Relaxed morning, checkout and transfer to airport/rail station for onward travel.</p>
                        </div>
                    </div>

                </div>

                <!-- PRICING & INCLUSIONS -->
                <div class="price-card" aria-label="Pricing and inclusions">
                    <div class="price-row">
                        <div>Base Price (per person)</div>
                        <div class="price-total" id="pricePerPerson">₹18,000</div>
                    </div>

                    <div class="price-row">
                        <div>Taxes & Fees</div>
                        <div>₹1,620</div>
                    </div>

                    <div class="price-row">
                        <div>Selected Guests</div>
                        <div id="priceSummary">1 person</div>
                    </div>

                    <hr style="margin:10px 0; border:none; border-top:1px solid #e6e9ef;" />

                    <div style="font-weight:700; display:flex; justify-content:space-between; align-items:center;">
                        <div>Total Payable</div>
                        <div class="price-total" id="totalPayable">₹19,620</div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Included</h4>
                        <div class="list-inline">
                            <div class="included">Hotel stays (4 nights)</div>
                            <div class="included">Daily breakfast</div>
                            <div class="included">All transfers & sightseeing</div>
                            <div class="included">Experienced local guide</div>
                        </div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Excluded</h4>
                        <div class="list-inline">
                            <div class="excluded">Airfare / Train fare</div>
                            <div class="excluded">Entrance / ferry fees (if any)</div>
                            <div class="excluded">Personal expenses</div>
                            <div class="excluded">Meals not specified</div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- RIGHT / BOOKING -->
            <div class="right-col">
                <aside class="booking-box" aria-labelledby="bookingHeading">
                    <h3 id="bookingHeading">Book This Package</h3>

                    <form id="bookingForm" method="post" action="/Home/PaymentPage">
                        <label for="travelDate">Travel Date</label>
                        <input id="travelDate" name="TravelDate" type="date" required />

                        <label for="guests">Guests</label>
                        <select id="guests" name="Guests" required>
                            <option value="1" selected>1 person</option>
                            <option value="2">2 persons</option>
                            <option value="3">3 persons</option>
                            <option value="4">4 persons</option>
                        </select>

                        <label for="contactEmail">Contact Email</label>
                        <input id="contactEmail" name="Email" type="email" placeholder="you@example.com" required />

                        <label for="phone">Phone</label>
                        <input id="phone" name="Phone" type="tel" placeholder="+91 98765 43210" />

                        <div class="booking-cta" style="margin-top:8px;">
                            <button type="submit" class="btn btn-primary" id="bookNowBtn">Book Now</button>
                        </div>

                        <p style="font-size:13px; color:#666; margin-top:8px;">
                            You'll be redirected to confirm availability and payment. For group bookings, contact <a href="mailto:groups@example.com">groups@example.com</a>.
                        </p>
                    </form>
                </aside>
            </div>

        </div>
    </div>

    <script src="@(Url.Content("~/js/Mumbai.js"))" defer></script>
</body>
</html>