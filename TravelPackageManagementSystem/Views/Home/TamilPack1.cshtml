@{
    ViewBag.Title = "TamilPack1 - Madurai & Thanjavur";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>TamilPack1 - Temple Heritage</title>
    <link rel="stylesheet" href="/css/PackTD.css" />
</head>
<body>
    <section class="hero">
        <img class="hero-img" src="/lib/Image/t1.jpg" alt="Madurai Temple" />
        <div class="hero-content">
            <h1>Tamil Nadu: Madurai & Thanjavur</h1>
            <p>3 Days • Meenakshi Temple • Brihadeeswarar Temple</p>
        </div>
    </section>

    <div class="container">
        <div class="flex">
            <div class="left-col">
                <div class="package-header">
                    <div class="package-title">
                        <h2>Discover Tamil Nadu: Madurai & Thanjavur</h2>
                        <div class="rating">★ 4.6 (742 reviews)</div>
                    </div>
                    <div style="text-align:right;">
                        <div style="font-size:14px;color:#666;">Duration</div>
                        <div style="font-weight:700;font-size:16px;">3 Days / 2 Nights</div>
                    </div>
                </div>

                <div class="gallery">
                    <div id="mainImage" class="main-image" style="background-image:url('/lib/Image/t1.jpg');"></div>
                    <div class="thumbs">
                        <button class="thumb active" data-src="/lib/Image/t1.jpg" style="background-image:url('/lib/Image/t1.jpg');"></button>
                        <button class="thumb" data-src="/lib/Image/t2.jpg" style="background-image:url('/lib/Image/t2.jpg');"></button>
                        <button class="thumb" data-src="/lib/Image/t3.jpg" style="background-image:url('/lib/Image/t3.jpg');"></button>
                        <button class="thumb" data-src="/lib/Image/t4.jpg" style="background-image:url('/lib/Image/t4.jpg');"></button>
                    </div>
                </div>

                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>Explore Tamil Nadu’s spiritual heart — Meenakshi Amman Temple in Madurai and the UNESCO Brihadeeswarar Temple in Thanjavur.</p>
                </div>

                <div class="itinerary">
                    <h3>Day-by-Day Itinerary</h3>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 1 — Arrival & Madurai</h4>
                            <span class="toggle">+</span>
                        </div>
                        <div class="day-body" style="display:none;">
                            <p>Arrival in Madurai. Check into your hotel. Visit the magnificent Meenakshi Amman Temple and explore the vibrant local markets nearby.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 2 — Thanjavur</h4>
                            <span class="toggle">+</span>
                        </div>
                        <div class="day-body" style="display:none;">
                            <p>Early morning drive to Thanjavur. Explore the Great Living Chola Temple - Brihadeeswarar Temple and visit the Thanjavur Royal Palace Museum.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 3 — Departure</h4>
                            <span class="toggle">+</span>
                        </div>
                        <div class="day-body" style="display:none;">
                            <p>Morning darshan at local shrines. Enjoy a traditional South Indian breakfast before being transferred for your onward journey.</p>
                        </div>
                    </div>
                </div>

                <div class="price-card">
                    <div class="price-row"><div>Base Price</div><div class="price-total">₹11,999</div></div>
                    <div class="price-row"><div>Taxes & Fees</div><div>₹1,200</div></div>
                    <div class="price-row"><div>Total Payable</div><div class="price-total">₹13,199</div></div>
                </div>
            </div>

            <div class="right-col">
                <aside class="booking-box">
                    <h3>Book This Package</h3>
                    <form id="bookingForm" method="post" action="/Home/PaymentPage">
                        <label>Travel Date</label><input type="date" required />
                        <label>Guests</label>
                        <select id="guests">
                            <option value="1">1 person</option>
                            <option value="2">2 persons</option>
                        </select>
                        <label>Email</label><input type="email" required />
                        <label>Phone</label><input type="tel" />
                        <button type="submit" class="btn btn-primary">Book Now</button>
                    </form>
                </aside>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // 1. GALLERY LOGIC
            const mainImage = document.getElementById('mainImage');
            const thumbnails = document.querySelectorAll('.thumb');

            thumbnails.forEach(thumb => {
                thumb.addEventListener('click', function() {
                    const newSrc = this.getAttribute('data-src');
                    mainImage.style.backgroundImage = `url('${newSrc}')`;
                    thumbnails.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            // 2. ITINERARY DROPDOWN LOGIC (FIX)
            const headers = document.querySelectorAll('.day-header');
            headers.forEach(header => {
                header.addEventListener('click', function() {
                    const body = this.nextElementSibling;
                    const toggle = this.querySelector('.toggle');

                    if (body.style.display === "block") {
                        body.style.display = "none";
                        toggle.textContent = "+";
                    } else {
                        body.style.display = "block";
                        toggle.textContent = "-";
                    }
                });
            });
        });
    </script>
</body>
</html>