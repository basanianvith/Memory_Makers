@{
    ViewBag.Title = "TamilPack2 - Pondicherry & Mahabalipuram";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>TamilPack2 - Coastal Escape</title>
    <link rel="stylesheet" href="/css/PackTD.css" />
</head>
<body>

    <section class="hero">
        <img class="hero-img" src="/lib/Image/t21.jpg" alt="Pondicherry Beach" />
        <div class="hero-content">
            <h1>Tamil Nadu: Pondicherry & Mahabalipuram</h1>
            <p>4 Days • French Quarter • Auroville • Shore Temple</p>
        </div>
    </section>

    <div class="container">
        <div class="flex">

            <div class="left-col">

                <div class="package-header">
                    <div class="package-title">
                        <h2>Discover Tamil Nadu: Pondicherry & Mahabalipuram</h2>
                        <div class="rating">★ 4.7 (689 reviews)</div>
                    </div>
                    <div style="text-align:right;">
                        <div style="font-size:14px;color:#666;">Duration</div>
                        <div style="font-weight:700;font-size:16px;">4 Days / 3 Nights</div>
                    </div>
                </div>

                <div class="gallery">
                    <div id="mainImage" class="main-image" style="background-image:url('/lib/Image/t22.jpg');"></div>
                    <div class="thumbs">
                        <button class="thumb active" data-src="/lib/Image/t22.jpg" style="background-image:url('/lib/Image/t22.jpg');"></button>
                        <button class="thumb" data-src="/lib/Image/t23.jpg" style="background-image:url('/lib/Image/t23.jpg');"></button>
                        <button class="thumb" data-src="/lib/Image/t24.jpg" style="background-image:url('/lib/Image/t24.jpg');"></button>
                        <button class="thumb" data-src="/lib/Image/t25.jpg" style="background-image:url('/lib/Image/t25.jpg');"></button>
                    </div>
                </div>

                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>
                        Experience the charm of Pondicherry’s French Quarter, the spiritual calm of Auroville, and the UNESCO heritage temples of Mahabalipuram. Comfortable stays, guided tours, and private transfers are included.
                    </p>
                </div>

                <div class="itinerary">
                    <h3>Day-by-Day Itinerary</h3>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 1 — Arrival & Pondicherry</h4>
                            <span class="toggle">+</span>
                        </div>
                        <div class="day-body" style="display:none;">
                            <p>Arrival at Chennai/Pondicherry. Check into your heritage hotel. Spend the evening exploring the French Quarter's yellow buildings, Promenade Beach, and charming local cafes.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 2 — Auroville & Paradise Beach</h4>
                            <span class="toggle">+</span>
                        </div>
                        <div class="day-body" style="display:none;">
                            <p>Morning visit to Auroville and the Matrimandir viewing point. Afternoon boat ride to Paradise Beach for relaxation and water activities.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 3 — Mahabalipuram Heritage</h4>
                            <span class="toggle">+</span>
                        </div>
                        <div class="day-body" style="display:none;">
                            <p>Drive to Mahabalipuram. Explore the UNESCO sites: Shore Temple, the monolithic Pancha Rathas, and the giant bas-relief of Arjuna’s Penance.</p>
                        </div>
                    </div>

                    <div class="day">
                        <div class="day-header">
                            <h4>Day 4 — Departure</h4>
                            <span class="toggle">+</span>
                        </div>
                        <div class="day-body" style="display:none;">
                            <p>Morning at leisure for shopping or visiting local galleries. Transfer to Chennai airport or railway station for your onward journey.</p>
                        </div>
                    </div>
                </div>

                <div class="price-card">
                    <div class="price-row"><div>Base Price (per person)</div><div class="price-total">₹13,499</div></div>
                    <div class="price-row"><div>Taxes & Fees</div><div>₹1,350</div></div>
                    <div class="price-row"><div>Selected Guests</div><div id="priceSummary">1 person</div></div>
                    <hr style="margin:10px 0;border:none;border-top:1px solid #e6e9ef;" />
                    <div style="font-weight:700;display:flex;justify-content:space-between;">
                        <div>Total Payable</div><div class="price-total" id="totalPayable">₹14,849</div>
                    </div>

                    <div style="margin-top:12px;">
                        <h4>What's Included</h4>
                        <div class="list-inline">
                            <span class="included">✔ Hotel stays (3 nights)</span>
                            <span class="included">✔ Daily breakfast</span>
                            <span class="included">✔ Private transfers</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="right-col">
                <aside class="booking-box">
                    <h3>Book This Package</h3>
                    <form method="post" action="/Home/PaymentPage">
                        <label>Travel Date</label><input type="date" required />
                        <label>Guests</label>
                        <select id="guestSelect">
                            <option value="1">1 person</option>
                            <option value="2">2 persons</option>
                            <option value="3">3 persons</option>
                            <option value="4">4 persons</option>
                        </select>
                        <label>Email</label><input type="email" required />
                        <label>Phone</label><input type="tel" />
                        <button type="submit" class="btn btn-primary" style="width:100%; margin-top:10px;">Book Now</button>
                    </form>
                </aside>
            </div>
        </div>
    </div>

    <div id="lightbox" class="lightbox" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.9); z-index:1000; justify-content:center; align-items:center;">
        <img id="lightboxImg" src="" style="max-width:90%; max-height:80%;" />
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // 1. GALLERY LOGIC
            const mainImage = document.getElementById('mainImage');
            const thumbnails = document.querySelectorAll('.thumb');
            const lightbox = document.getElementById('lightbox');
            const lightboxImg = document.getElementById('lightboxImg');

            thumbnails.forEach(thumb => {
                thumb.addEventListener('click', function () {
                    const newSrc = this.getAttribute('data-src');
                    mainImage.style.backgroundImage = `url('${newSrc}')`;
                    thumbnails.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            mainImage.addEventListener('click', () => {
                const currentBg = mainImage.style.backgroundImage.slice(5, -2).replace(/"/g, "");
                lightboxImg.src = currentBg;
                lightbox.style.display = 'flex';
            });

            lightbox.addEventListener('click', () => { lightbox.style.display = 'none'; });

            // 2. ITINERARY DROPDOWN LOGIC
            const headers = document.querySelectorAll('.day-header');
            headers.forEach(header => {
                header.addEventListener('click', function() {
                    const body = this.nextElementSibling;
                    const toggle = this.querySelector('.toggle');

                    if (body.style.display === "block") {
                        body.style.display = "none";
                        toggle.textContent = "+";
                    } else {
                        body.style.display = "block";
                        toggle.textContent = "-";
                    }
                });
            });

            // 3. PRICE UPDATE LOGIC
            const guestSelect = document.getElementById('guestSelect');
            const totalDisplay = document.getElementById('totalPayable');
            const summaryDisplay = document.getElementById('priceSummary');

            const basePrice = 13499;
            const taxes = 1350;

            guestSelect.addEventListener('change', function() {
                const count = parseInt(this.value);
                const total = (basePrice + taxes) * count;
                summaryDisplay.textContent = count + (count > 1 ? " persons" : " person");
                totalDisplay.textContent = "₹" + total.toLocaleString('en-IN');
            });
        });
    </script>
</body>
</html>