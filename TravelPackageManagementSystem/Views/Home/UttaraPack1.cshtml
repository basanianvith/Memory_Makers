@{
    ViewBag.Title = "Rishikesh Retreat"; Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/pack-details.css" />
</head>
<body>
    <section class="hero" style="background-image: url('https://images.unsplash.com/photo-1544735716-392fe2489ffa?q=80&w=1600');">
        <div class="hero-content">
            <h1>Rishikesh Quick Retreat</h1>
            <p>3 Days • Ganga Aarti • White Water Rafting • Yoga</p>
        </div>
    </section>

    <div class="container">
        <div class="flex">
            <div class="left-col">
                <div class="package-header">
                    <div class="package-title">
                        <h2>Yoga Capital: Adventure & Soul</h2>
                        <div class="rating">★ 4.7 (185 reviews)</div>
                    </div>
                    <div style="text-align: right;">
                        <div style="font-size: 14px; color:#666;">Duration</div>
                        <div style="font-weight:700; font-size:16px;">3 Days / 2 Nights</div>
                    </div>
                </div>

                <div class="gallery">
                    <div id="mainImage" class="main-image" style="background-image: url('https://images.unsplash.com/photo-1544735716-392fe2489ffa?q=80&w=1400');"></div>
                    <div class="thumbs">
                        <div class="thumb active" data-src="https://images.unsplash.com/photo-1544735716-392fe2489ffa?q=80&w=1400" style="background-image: url('https://images.unsplash.com/photo-1544735716-392fe2489ffa?q=80&w=200');"></div>
                        <div class="thumb" data-src="https://images.unsplash.com/photo-1626621341517-bbf3d9990a23?q=80&w=1400" style="background-image: url('https://images.unsplash.com/photo-1626621341517-bbf3d9990a23?q=80&w=200');"></div>
                    </div>
                </div>

                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>Escape to the foothills of the Himalayas. Witness the magical Ganga Aarti, challenge yourself with river rafting, and find peace in authentic yoga sessions.</p>
                </div>

                <div class="itinerary">
                    <h3>Day-by-Day Itinerary</h3>
                    <div class="day">
                        <div class="day-header"><h4>Day 1 — Arrival & Evening Aarti</h4><div class="toggle">+</div></div>
                        <div class="day-body"><p>Pickup from Dehradun/Haridwar. Evening at Triveni Ghat for the soulful Aarti ceremony.</p></div>
                    </div>
                    <div class="day">
                        <div class="day-header"><h4>Day 2 — Rafting & Cafe Hopping</h4><div class="toggle">+</div></div>
                        <div class="day-body"><p>Morning White Water Rafting. Afternoon visit to Laxman Jhula and the Beatles Ashram.</p></div>
                    </div>
                    <div class="day">
                        <div class="day-header"><h4>Day 3 — Departure</h4><div class="toggle">+</div></div>
                        <div class="day-body"><p>Sunrise Yoga by the river and transfer back for your journey home.</p></div>
                    </div>
                </div>

                <div class="price-card">
                    <div class="price-row">
                        <div>Base Price (per person)</div>
                        <div class="price-total" id="pricePerPerson">₹8,999</div>
                    </div>
                    <div class="price-row"><div>Selected Guests</div><div id="priceSummary">1 person</div></div>
                    <hr style="margin:10px 0; border:none; border-top:1px solid #e6e9ef;" />
                    <div style="font-weight:700; display:flex; justify-content:space-between;">
                        <div>Total Payable</div><div class="price-total" id="totalPayable">₹8,999</div>
                    </div>
                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Included</h4>
                        <div class="list-inline">
                            <div class="included">Riverside Camp/Hotel</div>
                            <div class="included">River Rafting Kit</div>
                            <div class="included">Daily Breakfast</div>
                            <div class="included">Local Guide</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="right-col">
                <aside class="booking-box">
                    <h3>Book This Package</h3>
                    <form id="bookingForm">
                        <label>Travel Date</label><input type="date" required />
                        <label>Guests</label>
                        <select id="guests">
                            <option value="1">1 person</option>
                            <option value="2">2 persons</option>
                        </select>
                        <label>Email</label><input type="email" required />
                        <button type="submit" class="btn btn-primary">Book Now</button>
                    </form>
                </aside>
            </div>
        </div>
    </div>
    <script>
        (function () {
            const main = document.getElementById('mainImage');
            const thumbs = document.querySelectorAll('.thumb');
            const guests = document.getElementById('guests');
            const basePrice = 8999;
            thumbs.forEach(t => {
                t.addEventListener('click', () => {
                    thumbs.forEach(x => x.classList.remove('active'));
                    t.classList.add('active');
                    main.style.backgroundImage = `url('${t.dataset.src}')`;
                });
            });
            document.querySelectorAll('.day-header').forEach(h => {
                h.addEventListener('click', () => {
                    const body = h.nextElementSibling;
                    const isOpen = body.style.display === 'block';
                    document.querySelectorAll('.day-body').forEach(db => db.style.display = 'none');
                    if (!isOpen) { body.style.display = 'block'; }
                });
            });
            guests.addEventListener('change', () => {
                const count = parseInt(guests.value);
                document.getElementById('totalPayable').textContent = `₹${(basePrice * count).toLocaleString()}`;
                document.getElementById('priceSummary').textContent = `${count} ${count > 1 ? 'persons' : 'person'}`;
            });
        })();
    </script>
</body>
</html>