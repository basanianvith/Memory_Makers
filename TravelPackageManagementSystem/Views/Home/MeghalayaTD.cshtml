@{
    ViewData["Title"] = "Meghalaya | Into the Clouds";
}

<link rel="stylesheet" href="~/css/travel-style.css" />
<style>
    :root {
        --accent-color: #00d2ff; /* Cloud Blue */
        --bg-gradient: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
    }

    /* Centering and Enhanced Typography */
    .hero-text, .gallery-title, .status-msg {
        text-align: center;
        margin-top: 50px;
        margin-bottom: 30px;
    }

        .hero-text h1 {
            font-size: 3.5rem;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 10px;
        }

        .hero-text span {
            color: var(--accent-color);
            text-shadow: 0px 0px 20px rgba(0, 210, 255, 0.5);
        }

    .gallery-title {
        font-size: 2.5rem;
        font-weight: 700;
        width: 100%;
    }

        .gallery-title span {
            color: var(--accent-color);
        }

    .status-msg {
        background: rgba(255, 255, 255, 0.1);
        padding: 15px;
        border-radius: 50px;
        width: fit-content;
        margin: 20px auto;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .active-msg {
        color: var(--accent-color);
        border-color: var(--accent-color);
    }
</style>

<div class="main-page">
    <div class="hero-text">
        <h1>Experience <span>Meghalaya</span></h1>
        <p>Journey into the Abode of Clouds.</p>
    </div>

    <div class="packages-section">
        <div class="pkg-card" onclick="selectPkg('Quick Escape')">
            <div class="pkg-img" style="background-image: url('/lib/Image/meghalaya.jpg');"></div>
            <div class="pkg-body">
                <h3>Quick Escape</h3>
                <p>3 Days • Shillong Peak</p>
                <div class="pkg-price">₹9,999</div>
                <button class="select-btn">Select Plan</button>
            </div>
        </div>

        <div class="pkg-card highlight" onclick="selectPkg('The Classic')">
            <div class="pkg-img" style="background-image: url('/lib/Image/Waterfall.jpg');"></div>
            <div class="pkg-body">
                <span class="hot-tag">Trending</span>
                <h3>The Classic</h3>
                <p>5 Days • Root Bridges</p>
                <div class="pkg-price">₹17,999</div>
                <button class="select-btn">Select Plan</button>
            </div>
        </div>

        <div class="pkg-card" onclick="selectPkg('Deep Explorer')">
            <div class="pkg-img" style="background-image: url('/lib/Image/meghbg.jpg');"></div>
            <div class="pkg-body">
                <h3>Deep Explorer</h3>
                <p>7 Days • Hidden Caves</p>
                <div class="pkg-price">₹25,999</div>
                <button class="select-btn">Select Plan</button>
            </div>
        </div>
    </div>

    @* <div id="selection-msg" class="status-msg">
    </div> *@

    <h2 class="gallery-title">Hidden <span>Gems</span> of the Northeast</h2>

    <div class="auto-scroll-container">
        <div class="scroll-track">
            <div class="gem-item"><img src="/lib/Image/meg1.jpg"><span>Krang Suri Blue Falls</span></div>
            <div class="gem-item"><img src="/lib/Image/meg2.jpg"><span>Double Decker Root Bridge</span></div>
            <div class="gem-item"><img src="/lib/Image/meg3.jpg"><span>Umngot River (Dawki)</span></div>
            <div class="gem-item"><img src="/lib/Image/meg4.jpg"><span>Wei Sawdong Falls</span></div>
            <div class="gem-item"><img src="/lib/Image/meg5.jpg"><span>Laitlum Canyons</span></div>
            <div class="gem-item"><img src="/lib/Image/meg6.jpg"><span>Mawsmai Caves</span></div>
            <div class="gem-item"><img src="/lib/Image/meg1.jpg"><span>Krang Suri Blue Falls</span></div>
            <div class="gem-item"><img src="/lib/Image/meg2.jpg"><span>Double Decker Root Bridge</span></div>
        </div>
    </div>
</div>

<script>
    function selectPkg(name) {
        const msg = document.getElementById('selection-msg');
        msg.innerHTML = `Ready to book <strong>${name}</strong>? Redirecting to payment...`;
        msg.classList.add('active-msg');
    }
    function selectPkg(name) {
         // Logic to redirect based on the package selected
         switch (name) {
        case 'Quick Escape':
            window.location.href = '/Home/MeghPack1';
            break;

        case 'The Classic':
            window.location.href = '/Home/MeghPack2';
            break;

        case 'Deep Explorer':
            window.location.href = '/Home/MeghPack3';
            break;
         }
    }
</script>