@{
    ViewBag.Title = "Goa Mini Break";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Goa Pack 1</title>
    <link rel="stylesheet" href="~/css/pack-details.css" />
</head>
<body>
    <section class="hero" style="background-image: url('/lib/Image/goa1.jpg');">
        <div class="hero-content">
            <h1>Goa Mini Break</h1>
            <p>3 Days • North Goa Beaches • Mandovi Cruise • Fort Aguada</p>
        </div>
    </section>

    <div class="container">
        <div class="flex">
            <div class="left-col">
                <div class="package-header">
                    <div class="package-title">
                        <h2>Quick Goa Getaway: Sun & Sand</h2>
                        <div class="rating">★ 4.6 (120 reviews)</div>
                    </div>
                    <div style="text-align: right;">
                        <div style="font-size: 14px; color:#666;">Duration</div>
                        <div style="font-weight:700; font-size:16px;">3 Days / 2 Nights</div>
                    </div>
                </div>

                <div class="gallery">
                    <div id="mainImage" class="main-image" style="background-image: url('/lib/Image/goa2.jpg');"></div>
                    <div class="thumbs">
                        <div class="thumb active" data-src="/lib/Image/goa6.jpg" style="background-image: url('/lib/Image/goa6.jpg');"></div>
                        <div class="thumb" data-src="/lib/Image/goa7.jpg" style="background-image: url('/lib/Image/goa7.jpg');"></div>
                        <div class="thumb" data-src="/lib/Image/goa8.jpg" style="background-image: url('/lib/Image/goa8.jpg');"></div>
                        <div class="thumb" data-src="/lib/Image/goa9.jpg" style="background-image: url('/lib/Image/goa9.jpg');"></div>
                    </div>
                </div>

                <div style="margin-top:16px;">
                    <h3>Overview</h3>
                    <p>Short on time? This 3-day package covers the highlights of North Goa, perfect for a weekend recharge with beach vibes and historic forts.</p>
                </div>

                <div class="itinerary">
                    <h3>Day-by-Day Itinerary</h3>
                    <div class="day">
                        <div class="day-header"><h4>Day 1 — Arrival & Baga Beach</h4><div class="toggle">+</div></div>
                        <div class="day-body"><p>Pickup and check-in. Evening at Baga and Calangute markets.</p></div>
                    </div>
                    <div class="day">
                        <div class="day-header"><h4>Day 2 — Fort Aguada & Cruise</h4><div class="toggle">+</div></div>
                        <div class="day-body"><p>Visit the 17th-century Portuguese fort and enjoy a sunset river cruise.</p></div>
                    </div>
                    <div class="day">
                        <div class="day-header"><h4>Day 3 — Departure</h4><div class="toggle">+</div></div>
                        <div class="day-body"><p>Last minute shopping at Panjim and transfer to airport/station.</p></div>
                    </div>
                </div>

                <div class="price-card">
                    <div class="price-row">
                        <div>Base Price (per person)</div>
                        <div class="price-total" id="pricePerPerson">₹7,499</div>
                    </div>
                    <div class="price-row">
                        <div>Selected Guests</div>
                        <div id="priceSummary">1 person</div>
                    </div>
                    <hr style="margin:10px 0; border:none; border-top:1px solid #e6e9ef;" />
                    <div style="font-weight:700; display:flex; justify-content:space-between;">
                        <div>Total Payable</div>
                        <div class="price-total" id="totalPayable">₹7,499</div>
                    </div>
                    <div style="margin-top:12px;">
                        <h4 style="font-size:15px; margin-bottom:6px;">What's Included</h4>
                        <div class="list-inline">
                            <div class="included">Standard AC Room</div>
                            <div class="included">Daily Breakfast</div>
                            <div class="included">Shared Sightseeing</div>
                            <div class="included">Airport Pickup</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="right-col">
                <aside class="booking-box">
                    <h3>Book This Package</h3>
                    <form id="bookingForm">
                        <label>Travel Date</label><input type="date" required />
                        <label>Guests</label>
                        <select id="guests">
                            <option value="1">1 person</option>
                            <option value="2">2 persons</option>
                        </select>
                        <label>Email</label><input type="email" required />
                        <button type="submit" class="btn btn-primary" asp-controller="Home" asp-action="PaymentPage">Book Now</button>
                    </form>
                </aside>
            </div>
        </div>
    </div>
    <script>
        (function () {
            const main = document.getElementById('mainImage');
            const thumbs = document.querySelectorAll('.thumb');
            const guests = document.getElementById('guests');
            const basePrice = 7499;

            thumbs.forEach(t => {
                t.addEventListener('click', () => {
                    thumbs.forEach(x => x.classList.remove('active'));
                    t.classList.add('active');
                    main.style.backgroundImage = `url('${t.dataset.src}')`;
                });
            });

            document.querySelectorAll('.day-header').forEach(h => {
                h.addEventListener('click', () => {
                    const body = h.nextElementSibling;
                    const isOpen = body.style.display === 'block';
                    document.querySelectorAll('.day-body').forEach(db => db.style.display = 'none');
                    if (!isOpen) { body.style.display = 'block'; }
                });
            });

            guests.addEventListener('change', () => {
                const count = parseInt(guests.value);
                document.getElementById('totalPayable').textContent = `₹${(basePrice * count).toLocaleString()}`;
                document.getElementById('priceSummary').textContent = `${count} ${count > 1 ? 'persons' : 'person'}`;
            });
        })();
    </script>
</body>
</html>